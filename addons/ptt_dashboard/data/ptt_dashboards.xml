<?xml version="1.0" encoding="UTF-8"?>
<odoo noupdate="0">
    <!-- 
        PTT Dashboard Configuration
        7 Dashboard Tabs:
        1. My Dashboard (from dashboard_data.xml) - Empty for custom user views
        2. My Tasks - Personal tasks, activities, to-dos
        3. Team - Manager view, team workload
        4. Events - Event calendar hub
        5. Pipeline - CRM + Sales
        6. Vendors - Vendor management hub
        7. Sales Metrics - Revenue + KPIs
    -->

    <!-- Tab 2: My Tasks Dashboard (Personal Inbox) -->
    <record id="dashboard_my_tasks" model="dashboard.dashboard">
        <field name="name">My Tasks</field>
    </record>

    <!-- Tab 3: Team Dashboard (Manager View) -->
    <record id="dashboard_team" model="dashboard.dashboard">
        <field name="name">Team</field>
    </record>

    <!-- Tab 4: Events Dashboard (Event Calendar Hub) -->
    <record id="dashboard_events" model="dashboard.dashboard">
        <field name="name">Events</field>
    </record>

    <!-- Tab 5: Pipeline Dashboard (CRM + Sales) -->
    <record id="dashboard_pipeline" model="dashboard.dashboard">
        <field name="name">Pipeline</field>
    </record>

    <!-- Tab 6: Vendors Dashboard (Vendor Management Hub) -->
    <record id="dashboard_vendors" model="dashboard.dashboard">
        <field name="name">Vendors</field>
    </record>

    <!-- Tab 7: Sales Metrics Dashboard (Revenue + KPIs) -->
    <record id="dashboard_sales_metrics" model="dashboard.dashboard">
        <field name="name">Sales Metrics</field>
    </record>

    <!-- Create menu items for each dashboard -->
    <function name="create_update_menu" model="dashboard.dashboard">
        <value eval="[ref('dashboard_my_tasks')]" />
    </function>
    <function name="create_update_menu" model="dashboard.dashboard">
        <value eval="[ref('dashboard_team')]" />
    </function>
    <function name="create_update_menu" model="dashboard.dashboard">
        <value eval="[ref('dashboard_events')]" />
    </function>
    <function name="create_update_menu" model="dashboard.dashboard">
        <value eval="[ref('dashboard_pipeline')]" />
    </function>
    <function name="create_update_menu" model="dashboard.dashboard">
        <value eval="[ref('dashboard_vendors')]" />
    </function>
    <function name="create_update_menu" model="dashboard.dashboard">
        <value eval="[ref('dashboard_sales_metrics')]" />
    </function>

</odoo>
