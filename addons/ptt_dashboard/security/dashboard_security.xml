<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="module_category_dashboard" model="ir.module.category">
        <field name="name">PTT Dashboard</field>
        <field name="description">Party Time Texas Dashboard - Track events, sales, vendors, and KPIs.</field>
        <field name="sequence">1</field>
    </record>

    <record model="res.groups.privilege" id="res_groups_privilege_dashboard">
        <field name="name">Dashboard</field>
        <field name="category_id" ref="module_category_dashboard"/>
        <field name="sequence">7</field>
    </record>

    <record id="group_dashboard_user" model="res.groups">
        <field name="name">User</field>
        <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        <field name="privilege_id" ref="res_groups_privilege_dashboard"/>
    </record>

    <record id="group_dashboard_manager" model="res.groups">
        <field name="name">Administrator</field>
        <field name="privilege_id" ref="res_groups_privilege_dashboard"/>
        <field name="implied_ids" eval="[(4, ref('group_dashboard_user'))]"/>
        <field name="user_ids" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
    </record>

    <data noupdate="0">
        <!-- Chart access rule: user sees charts if their groups match chart's group_ids OR group_ids is empty -->
        <record id="dashboard_chart_user_rule" model="ir.rule">
            <field name="name">Dashboard Chart</field>
            <field name="model_id" ref="ptt_dashboard.model_dashboard_chart"/>
            <field name="domain_force">[
                '|',
                ('group_ids', 'in', user.group_ids.ids),
                ('group_ids', '=', False),
                '|',
                ('company_id', '=', False),
                ('company_id', 'in', company_ids)
            ]</field>
            <field name="groups" eval="[(4, ref('ptt_dashboard.group_dashboard_user'))]"/>
        </record>

        <record id="dashboard_chart_global_multi_company_rule" model="ir.rule">
            <field name="name">Dashboard Chart Global Multi Company</field>
            <field name="model_id" ref="ptt_dashboard.model_dashboard_chart"/>
            <field name="domain_force">['|', ('company_id','=',False), ('company_id', 'in', company_ids)]</field>
            <field name="groups" eval="[(4, ref('ptt_dashboard.group_dashboard_manager'))]"/>
        </record>

        <record id="dashboard_user_rule" model="ir.rule">
            <field name="name">Dashboard</field>
            <field name="model_id" ref="ptt_dashboard.model_dashboard_dashboard"/>
            <field name="domain_force">[
                '|', '|', '|',
                ('user_ids', 'in', user.ids),
                ('user_ids', '=', False),
                ('group_ids', 'in', user.group_ids.ids),
                ('group_ids', '=', False),
                '|',
                ('company_id', '=', False),
                ('company_id', 'in', company_ids)
            ]</field>
            <field name="groups" eval="[(4, ref('ptt_dashboard.group_dashboard_user'))]"/>
        </record>

        <record id="dashboard_multi_company_rule" model="ir.rule">
            <field name="name">Dashboard Multi Company</field>
            <field name="model_id" ref="ptt_dashboard.model_dashboard_dashboard"/>
            <field name="domain_force">['|', ('company_id','=',False), ('company_id', 'in', company_ids)]</field>
            <field name="groups" eval="[(4, ref('ptt_dashboard.group_dashboard_manager'))]"/>
        </record>

    </data>
</odoo>
