<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
        <!-- Project Stakeholder Tree View (Simple Contact Directory) -->
        <record id="view_project_stakeholder_tree" model="ir.ui.view">
            <field name="name">project.stakeholder.tree</field>
            <field name="model">project.stakeholder</field>
            <field name="arch" type="xml">
                <list string="Stakeholders" editable="bottom">
                    <field name="partner_id"/>
                    <field name="role"/>
                    <field name="is_client"/>
                    <field name="is_vendor"/>
                    <field name="vendor_category" optional="show"/>
                    <field name="email"/>
                    <field name="phone"/>
                    <field name="project_id" column_invisible="1"/>
                </list>
            </field>
        </record>
        
        <!-- Project Stakeholder Form View (Simple) -->
        <record id="view_project_stakeholder_form" model="ir.ui.view">
            <field name="name">project.stakeholder.form</field>
            <field name="model">project.stakeholder</field>
            <field name="arch" type="xml">
                <form string="Stakeholder">
                    <sheet>
                        <group>
                            <group string="Contact">
                                <field name="partner_id" options="{'no_create': False}"/>
                                <field name="role" placeholder="e.g., Bride, Event Coordinator, DJ"/>
                            </group>
                            <group string="Type">
                                <field name="is_client"/>
                                <field name="is_vendor"/>
                                <field name="vendor_category" invisible="not is_vendor"/>
                            </group>
                        </group>
                        <group>
                            <group string="Contact Info (auto-populated)">
                                <field name="email" readonly="1"/>
                                <field name="phone" readonly="1"/>
                            </group>
                            <group>
                                <field name="project_id" readonly="1"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        
        <!-- Project Stakeholder Action -->
        <record id="action_project_stakeholder" model="ir.actions.act_window">
            <field name="name">Event Stakeholders</field>
            <field name="res_model">project.stakeholder</field>
            <field name="view_mode">list,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Add contacts to your event
                </p>
                <p>
                    Track all the people you need to communicate with - 
                    clients, vendors, and other key contacts.
                </p>
            </field>
        </record>

    </data>
</odoo>
