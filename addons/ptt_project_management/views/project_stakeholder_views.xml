<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
        <!-- Project Stakeholder Tree View -->
        <record id="view_project_stakeholder_tree" model="ir.ui.view">
            <field name="name">project.stakeholder.tree</field>
            <field name="model">project.stakeholder</field>
            <field name="arch" type="xml">
                <list string="Stakeholders" editable="top">
                    <field name="sequence" widget="handle"/>
                    <field name="partner_id"/>
                    <field name="role"/>
                    <field name="is_vendor"/>
                    <field name="is_client"/>
                    <field name="is_internal"/>
                    <field name="vendor_category" optional="show"
                           invisible="not is_vendor"/>
                    <field name="status" widget="badge"
                           decoration-success="status == 'confirmed'"
                           decoration-warning="status == 'pending'"
                           decoration-danger="status in ('unavailable', 'cancelled')"/>
                    <field name="email" optional="show"/>
                    <field name="phone" optional="hide"/>
                    <field name="project_id" optional="hide"/>
                </list>
            </field>
        </record>
        
        <!-- Project Stakeholder Form View -->
        <record id="view_project_stakeholder_form" model="ir.ui.view">
            <field name="name">project.stakeholder.form</field>
            <field name="model">project.stakeholder</field>
            <field name="arch" type="xml">
                <form string="Stakeholder">
                    <header>
                        <button name="action_confirm_stakeholder" type="object"
                                string="Confirm" class="btn-primary"
                                invisible="status != 'pending'"/>
                        <button name="action_mark_unavailable" type="object"
                                string="Mark Unavailable"
                                invisible="status in ('unavailable', 'cancelled')"/>
                        <button name="action_cancel" type="object"
                                string="Cancel"
                                invisible="status == 'cancelled'"/>
                        <field name="status" widget="statusbar"
                               statusbar_visible="pending,confirmed"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="partner_id" options="{'no_create': True}"/>
                            </h1>
                            <h3>
                                <field name="role" placeholder="Role..."/>
                            </h3>
                        </div>
                        
                        <group>
                            <group string="Stakeholder Type">
                                <field name="project_id" readonly="1"/>
                                <field name="is_vendor"/>
                                <field name="is_client"/>
                                <field name="is_internal"/>
                                <field name="vendor_category" invisible="not is_vendor"/>
                            </group>
                            <group string="Contact Information">
                                <field name="email"/>
                                <field name="phone"/>
                                <field name="mobile"/>
                                <field name="communication_preference"/>
                            </group>
                        </group>
                        
                        <group>
                            <group string="Status">
                                <field name="required_for_event"/>
                                <field name="confirmed_date" readonly="1"/>
                            </group>
                            <group string="Sequence">
                                <field name="sequence"/>
                            </group>
                        </group>
                        
                        <notebook>
                            <page string="Responsibility" name="responsibility">
                                <field name="responsibility" placeholder="Describe responsibilities..."/>
                            </page>
                            <page string="Special Requirements" name="requirements">
                                <field name="special_requirements" placeholder="Special requirements or notes..."/>
                            </page>
                        </notebook>
                    </sheet>
                    <chatter/>
                </form>
            </field>
        </record>
        
        <!-- Project Stakeholder Kanban View -->
        <record id="view_project_stakeholder_kanban" model="ir.ui.view">
            <field name="name">project.stakeholder.kanban</field>
            <field name="model">project.stakeholder</field>
            <field name="arch" type="xml">
                <kanban default_group_by="status" class="o_kanban_small_column">
                    <field name="partner_id"/>
                    <field name="role"/>
                    <field name="status"/>
                    <field name="is_vendor"/>
                    <field name="email"/>
                    <templates>
                        <t t-name="card">
                            <field name="partner_id" widget="res_partner_many2one"/>
                            <div class="mt-1">
                                <strong><field name="role"/></strong>
                            </div>
                            <div class="text-muted" t-if="record.is_vendor.raw_value">
                                <i class="fa fa-truck"/> Vendor
                            </div>
                            <footer class="pt-2">
                                <field name="email" widget="email"/>
                            </footer>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>
        
        <!-- Project Stakeholder Action -->
        <record id="action_project_stakeholder" model="ir.actions.act_window">
            <field name="name">Event Stakeholders</field>
            <field name="res_model">project.stakeholder</field>
            <field name="view_mode">list,kanban,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Add stakeholders to your event project
                </p>
                <p>
                    Stakeholders include vendors, clients, and internal team members
                    involved in delivering the event.
                </p>
            </field>
        </record>

    </data>
</odoo>
