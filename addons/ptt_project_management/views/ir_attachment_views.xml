<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- ================================================================ -->
        <!-- FORM VIEW - Add project/task fields                              -->
        <!-- Based on: Cybrosys project_task_attachments/views/ir_attachment_views.xml -->
        <!-- ================================================================ -->
        <record id="view_attachment_form_inherit_ptt" model="ir.ui.view">
            <field name="name">ir.attachment.view.form.inherit.ptt</field>
            <field name="model">ir.attachment</field>
            <field name="inherit_id" ref="base.view_attachment_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='public']" position="after">
                    <field name="attach_to" invisible="1"/>
                    <field name="project_id" invisible="attach_to == 'task'"/>
                    <field name="task_id" invisible="attach_to == 'project'"/>
                </xpath>
            </field>
        </record>

        <!-- ================================================================ -->
        <!-- LIST VIEW - Show project, task columns                           -->
        <!-- ================================================================ -->
        <record id="view_attachment_tree_inherit_ptt" model="ir.ui.view">
            <field name="name">ir.attachment.view.list.inherit.ptt</field>
            <field name="model">ir.attachment</field>
            <field name="inherit_id" ref="base.view_attachment_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='type']" position="after">
                    <field name="project_id" optional="show"/>
                    <field name="task_id" optional="hide"/>
                </xpath>
            </field>
        </record>

        <!-- ================================================================ -->
        <!-- KANBAN VIEW - Show project/task info on cards                    -->
        <!-- ================================================================ -->
        <record id="view_document_file_kanban_inherit_ptt" model="ir.ui.view">
            <field name="name">ir.attachment.view.kanban.inherit.ptt</field>
            <field name="model">ir.attachment</field>
            <field name="inherit_id" ref="mail.view_document_file_kanban"/>
            <field name="arch" type="xml">
                <xpath expr="//kanban" position="inside">
                    <field name="project_id"/>
                    <field name="task_id"/>
                </xpath>
                <xpath expr="//main//field[@name='name']" position="after">
                    <span t-if="record.project_id.value" class="d-flex text-muted small">
                        <i class="fa fa-folder-o me-1"/>
                        <field name="project_id"/>
                    </span>
                    <span t-if="record.task_id.value" class="d-flex text-muted small">
                        <i class="fa fa-tasks me-1"/>
                        <field name="task_id"/>
                    </span>
                </xpath>
            </field>
        </record>

        <!-- ================================================================ -->
        <!-- SEARCH VIEW - Filter by project, task                            -->
        <!-- ================================================================ -->
        <record id="view_attachment_search_ptt" model="ir.ui.view">
            <field name="name">ir.attachment.search.ptt</field>
            <field name="model">ir.attachment</field>
            <field name="arch" type="xml">
                <search string="Documents">
                    <field name="name"/>
                    <field name="project_id"/>
                    <field name="task_id"/>

                    <group string="Group By">
                        <filter name="group_by_project" string="Project"
                                context="{'group_by': 'project_id'}"/>
                        <filter name="group_by_task" string="Task"
                                context="{'group_by': 'task_id'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- ================================================================ -->
        <!-- PROJECT DOCUMENTS ACTION                                         -->
        <!-- Based on: Cybrosys project_task_attachments                      -->
        <!-- ================================================================ -->
        <record id="ir_attachment_action_view_project_documents" model="ir.actions.act_window">
            <field name="type">ir.actions.act_window</field>
            <field name="name">Project Documents</field>
            <field name="res_model">ir.attachment</field>
            <field name="view_mode">kanban,list,form</field>
            <field name="search_view_id" ref="view_attachment_search_ptt"/>
            <field name="context">{
                'default_attach_to': 'project',
                'default_res_model': 'project.project',
                'search_default_group_by_project': 1
            }</field>
            <field name="domain">[('res_model', '=', 'project.project')]</field>
        </record>

        <!-- ================================================================ -->
        <!-- TASK DOCUMENTS ACTION                                            -->
        <!-- ================================================================ -->
        <record id="ir_attachment_action_view_task_documents" model="ir.actions.act_window">
            <field name="type">ir.actions.act_window</field>
            <field name="name">Task Documents</field>
            <field name="res_model">ir.attachment</field>
            <field name="view_mode">kanban,list,form</field>
            <field name="search_view_id" ref="view_attachment_search_ptt"/>
            <field name="context">{
                'default_attach_to': 'task',
                'default_res_model': 'project.task'
            }</field>
            <field name="domain">[('res_model', '=', 'project.task')]</field>
        </record>

        <!-- ================================================================ -->
        <!-- ALL EVENT DOCUMENTS ACTION (Projects + Tasks)                    -->
        <!-- ================================================================ -->
        <record id="ir_attachment_action_view_all_event_documents" model="ir.actions.act_window">
            <field name="type">ir.actions.act_window</field>
            <field name="name">All Event Documents</field>
            <field name="res_model">ir.attachment</field>
            <field name="view_mode">kanban,list,form</field>
            <field name="search_view_id" ref="view_attachment_search_ptt"/>
            <field name="context">{'search_default_group_by_project': 1}</field>
            <field name="domain">[
                '|',
                ('res_model', '=', 'project.project'),
                ('res_model', '=', 'project.task')
            ]</field>
        </record>

        <!-- ================================================================ -->
        <!-- MENU ITEMS - Documents submenu in Project app                    -->
        <!-- ================================================================ -->
        <menuitem id="ir_attachment_menu"
                  name="Documents"
                  parent="project.menu_main_pm"
                  sequence="50"/>

        <menuitem id="ir_attachment_menu_view_all_documents"
                  name="All Event Documents"
                  parent="ir_attachment_menu"
                  action="ir_attachment_action_view_all_event_documents"
                  sequence="1"/>

        <menuitem id="ir_attachment_menu_view_project_documents"
                  name="Project Documents"
                  parent="ir_attachment_menu"
                  action="ir_attachment_action_view_project_documents"
                  sequence="2"/>

        <menuitem id="ir_attachment_menu_view_task_documents"
                  name="Task Documents"
                  parent="ir_attachment_menu"
                  action="ir_attachment_action_view_task_documents"
                  sequence="3"/>

    </data>
</odoo>
