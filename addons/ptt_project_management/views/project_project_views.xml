<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
        <!-- Extend Project Form View with Stakeholder and Template Integration -->
        <record id="view_project_form_ptt_management" model="ir.ui.view">
            <field name="name">project.project.form.ptt.management</field>
            <field name="model">project.project</field>
            <field name="inherit_id" ref="ptt_business_core.view_project_form_ptt"/>
            <field name="priority">30</field>
            <field name="arch" type="xml">
                
                <!-- Add smart buttons -->
                <xpath expr="//div[@name='button_box']" position="inside">
                    <button name="action_view_crm_lead" type="object"
                            class="oe_stat_button" icon="fa-bullseye"
                            invisible="not ptt_crm_lead_id">
                        <div class="o_stat_info">
                            <span class="o_stat_value">CRM</span>
                            <span class="o_stat_text">Opportunity</span>
                        </div>
                    </button>
                    <button name="action_view_sale_order" type="object"
                            class="oe_stat_button" icon="fa-shopping-cart"
                            invisible="not sale_order_id">
                        <div class="o_stat_info">
                            <span class="o_stat_value">Sale</span>
                            <span class="o_stat_text">Order</span>
                        </div>
                    </button>
                    <button name="action_view_stakeholders" type="object"
                            class="oe_stat_button" icon="fa-address-book">
                        <div class="o_stat_info">
                            <span class="o_stat_text">Contacts</span>
                        </div>
                    </button>
                </xpath>
                
                <!-- Add Template field (event type is ptt_event_type_id from ptt_enhanced_sales) -->
                <xpath expr="//field[@name='ptt_crm_lead_id']" position="after">
                    <field name="template_id" options="{'no_create': True}"/>
                </xpath>
                
                <!-- Add Event Status after Event Identity group -->
                <xpath expr="//page[@name='ptt_event_details']//group[@name='event_identity']" position="inside">
                    <field name="event_status" widget="badge"
                           decoration-info="event_status == 'planning'"
                           decoration-success="event_status in ('confirmed', 'completed')"
                           decoration-warning="event_status == 'in_progress'"
                           decoration-danger="event_status == 'cancelled'"/>
                </xpath>
                
                <!-- Replace the placeholder Event Directory Page with real content -->
                <xpath expr="//page[@name='stakeholders']" position="replace">
                    <page string="Event Directory" name="stakeholders">
                        <field name="stakeholder_ids" context="{'default_project_id': id}">
                            <list editable="bottom">
                                <field name="partner_id"/>
                                <field name="role"/>
                                <field name="is_client"/>
                                <field name="is_vendor"/>
                                <field name="vendor_category" optional="show"/>
                                <field name="email"/>
                                <field name="phone"/>
                            </list>
                        </field>
                    </page>
                </xpath>
                
            </field>
        </record>
        
        <!-- Extend Project Tree View -->
        <record id="view_project_tree_ptt_management" model="ir.ui.view">
            <field name="name">project.project.tree.ptt.management</field>
            <field name="model">project.project</field>
            <field name="inherit_id" ref="ptt_business_core.view_project_tree_ptt"/>
            <field name="priority">30</field>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='ptt_event_date']" position="after">
                    <field name="event_status" widget="badge" optional="show"
                           decoration-info="event_status == 'planning'"
                           decoration-success="event_status in ('confirmed', 'completed')"
                           decoration-warning="event_status == 'in_progress'"
                           decoration-danger="event_status == 'cancelled'"/>
                </xpath>
            </field>
        </record>

    </data>
</odoo>
