<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
        <!-- Extend Sale Order Type Form to add Project Template field -->
        <record id="view_sale_order_type_form_template" model="ir.ui.view">
            <field name="name">sale.order.type.form.project.template</field>
            <field name="model">sale.order.type</field>
            <field name="inherit_id" ref="ptt_enhanced_sales.view_sale_order_type_form"/>
            <field name="priority">20</field>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='requires_approval']" position="before">
                    <field name="project_template_id" options="{'no_create': True}"/>
                </xpath>
            </field>
        </record>

    </data>
</odoo>
