<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <!--
        PTT Project Dashboard Template v2.4.0
        
        Layout (top to bottom):
        - 4 KPI cards
        - My Tasks list (primary focus)
        - Event Calendar (from CRM + Projects)
        - My Projects list
        - Tasks by Stage chart
    -->
    <t t-name="ptt_project_management.Dashboard">
        <div class="ptt-dashboard">
            <!-- Error Message -->
            <div t-if="state.error" class="alert alert-danger m-3" role="alert">
                <i class="fa fa-exclamation-triangle me-2"/>
                <strong>Error:</strong> <t t-esc="state.error"/>
                <button type="button" class="btn btn-sm btn-outline-danger ms-3" t-on-click="() => location.reload()">
                    <i class="fa fa-refresh me-1"/> Refresh
                </button>
            </div>

            <!-- Loading Spinner -->
            <div t-elif="state.loading" class="d-flex justify-content-center align-items-center flex-grow-1">
                <div class="spinner-border" role="status">
                    <span class="visually-hidden">Loading...</span>
                </div>
            </div>

            <t t-else="">
                <!-- COMPACT HEADER -->
                <div class="ptt-dashboard-header">
                    <div class="ptt-filter-row">
                        <!-- Date Period Pills -->
                        <div class="ptt-filter-group ptt-filter-wide">
                            <label>Period</label>
                            <div class="ptt-date-pills">
                                <span class="ptt-date-pill" t-att-class="{'active': state.activePeriod === 'today'}" 
                                      t-on-click="() => this.setDatePeriod('today')">Today</span>
                                <span class="ptt-date-pill" t-att-class="{'active': state.activePeriod === 'week'}" 
                                      t-on-click="() => this.setDatePeriod('week')">Week</span>
                                <span class="ptt-date-pill" t-att-class="{'active': state.activePeriod === 'month'}" 
                                      t-on-click="() => this.setDatePeriod('month')">Month</span>
                                <span class="ptt-date-pill" t-att-class="{'active': !state.activePeriod || state.activePeriod === ''}" 
                                      t-on-click="() => this.setDatePeriod('')">All</span>
                            </div>
                        </div>
                        
                        <!-- Customer Filter -->
                        <div class="ptt-filter-group">
                            <label>Customer</label>
                            <select class="form-select" t-ref="customerSelect" t-on-change="applyFilters">
                                <option value="">All Customers</option>
                                <t t-foreach="state.customers" t-as="customer" t-key="customer.id">
                                    <option t-att-value="customer.id"><t t-esc="customer.name"/></option>
                                </t>
                            </select>
                        </div>
                        
                        <!-- Project Filter -->
                        <div class="ptt-filter-group">
                            <label>Project</label>
                            <select class="form-select" t-ref="projectSelect" t-on-change="applyFilters">
                                <option value="">All Projects</option>
                                <t t-foreach="state.projects" t-as="project" t-key="project.id">
                                    <option t-att-value="project.id"><t t-esc="project.name"/></option>
                                </t>
                            </select>
                        </div>
                        
                        <!-- Action Buttons -->
                        <div class="ptt-actions">
                            <button class="ptt-refresh-btn" t-on-click="() => this.refreshDashboard(false)" 
                                    t-att-disabled="state.refreshing">
                                <i t-att-class="state.refreshing ? 'fa fa-spinner fa-spin' : 'fa fa-refresh'"/>
                                <span t-if="!state.refreshing">Refresh</span>
                            </button>
                        </div>
                    </div>
                </div>

                <!-- SCROLLABLE BODY -->
                <div class="ptt-dashboard-body">
                    <!-- KPI GRID - 4 focused metrics -->
                    <div class="ptt-kpi-grid">
                        <div class="ptt-kpi-card ptt-kpi-primary" t-on-click="openMyTasks">
                            <div class="ptt-kpi-value"><t t-esc="state.myTasks"/></div>
                            <div class="ptt-kpi-label">My Tasks</div>
                        </div>
                        <div class="ptt-kpi-card" t-on-click="openMyProjects">
                            <div class="ptt-kpi-value"><t t-esc="state.myProjects"/></div>
                            <div class="ptt-kpi-label">My Projects</div>
                        </div>
                        <div class="ptt-kpi-card ptt-kpi-danger" t-on-click="openMyOverdueTasks">
                            <div class="ptt-kpi-value"><t t-esc="state.myOverdueTasks"/></div>
                            <div class="ptt-kpi-label">Overdue</div>
                        </div>
                        <div class="ptt-kpi-card ptt-kpi-warning" t-on-click="openDueThisWeek">
                            <div class="ptt-kpi-value"><t t-esc="state.dueThisWeek"/></div>
                            <div class="ptt-kpi-label">Due This Week</div>
                        </div>
                    </div>

                    <!-- MY TASKS LIST (PRIMARY - at top) -->
                    <div class="card ptt-list-card mb-3">
                        <div class="card-header">
                            <h5><i class="fa fa-tasks me-2"/>My Tasks</h5>
                        </div>
                        <div class="card-body p-0">
                            <div class="table-responsive">
                                <table class="table table-hover mb-0">
                                    <thead>
                                        <tr>
                                            <th>Task</th>
                                            <th>Project</th>
                                            <th>Deadline</th>
                                            <th>Priority</th>
                                            <th></th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <t t-foreach="state.myTasksList" t-as="task" t-key="task.id">
                                            <tr t-att-class="{'ptt-row-overdue': task.is_overdue}">
                                                <td class="fw-medium"><t t-esc="task.name"/></td>
                                                <td class="text-muted"><t t-esc="task.project_name"/></td>
                                                <td>
                                                    <span t-if="task.deadline_display" 
                                                          t-att-class="task.is_overdue ? 'badge bg-danger' : 'badge bg-secondary'">
                                                        <t t-esc="task.deadline_display"/>
                                                    </span>
                                                    <span t-else="" class="text-muted">-</span>
                                                </td>
                                                <td>
                                                    <i t-if="task.priority === '3'" class="fa fa-flag text-danger" title="Urgent"/>
                                                    <i t-elif="task.priority === '2'" class="fa fa-flag text-warning" title="High"/>
                                                    <i t-elif="task.priority === '1'" class="fa fa-flag text-info" title="Medium"/>
                                                    <i t-else="" class="fa fa-flag-o text-muted" title="Normal"/>
                                                </td>
                                                <td class="text-end">
                                                    <button class="btn btn-sm btn-outline-primary" t-on-click="() => this.viewTask(task.id)">Open</button>
                                                </td>
                                            </tr>
                                        </t>
                                        <tr t-if="!state.myTasksList || state.myTasksList.length === 0">
                                            <td colspan="5" class="text-center text-muted py-4">No tasks assigned to you</td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                        <div class="card-footer ptt-pagination">
                            <button class="ptt-pagination-btn" t-on-click="prevTaskPage" t-att-disabled="state.taskPage &lt;= 1">
                                <i class="fa fa-chevron-left"/>
                            </button>
                            <span class="ptt-pagination-text">Page <t t-esc="state.taskPage"/> of <t t-esc="state.taskPages"/></span>
                            <button class="ptt-pagination-btn" t-on-click="nextTaskPage" t-att-disabled="state.taskPage >= state.taskPages">
                                <i class="fa fa-chevron-right"/>
                            </button>
                        </div>
                    </div>

                    <!-- EVENT CALENDAR -->
                    <div class="card ptt-calendar-card mb-3">
                        <div class="card-header">
                            <h5><i class="fa fa-calendar me-2"/>Upcoming Events</h5>
                            <div class="ptt-legend">
                                <span class="ptt-legend-item"><span class="ptt-legend-dot ptt-lead"></span> Lead</span>
                                <span class="ptt-legend-item"><span class="ptt-legend-dot ptt-quote"></span> Quote Sent</span>
                                <span class="ptt-legend-item"><span class="ptt-legend-dot ptt-booked"></span> Booked</span>
                            </div>
                        </div>
                        <div class="card-body p-0">
                            <div class="ptt-event-list">
                                <t t-foreach="state.upcomingEvents" t-as="event" t-key="event.id">
                                    <div class="ptt-event-item" t-att-class="'ptt-event-' + event.status" t-on-click="() => this.viewEvent(event)">
                                        <div class="ptt-event-date">
                                            <div class="ptt-event-month"><t t-esc="event.month"/></div>
                                            <div class="ptt-event-day"><t t-esc="event.day"/></div>
                                        </div>
                                        <div class="ptt-event-details">
                                            <div class="ptt-event-title"><t t-esc="event.name"/></div>
                                            <div class="ptt-event-customer"><t t-esc="event.customer or 'No customer'"/></div>
                                        </div>
                                        <div class="ptt-event-status">
                                            <span t-att-class="'badge ptt-badge-' + event.status"><t t-esc="event.status_label"/></span>
                                        </div>
                                    </div>
                                </t>
                                <div t-if="!state.upcomingEvents || state.upcomingEvents.length === 0" class="text-center text-muted py-4">
                                    No upcoming events
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- MY PROJECTS + STAGE CHART -->
                    <div class="row g-3 mb-3">
                        <div class="col-lg-7">
                            <div class="card ptt-list-card h-100">
                                <div class="card-header">
                                    <h5><i class="fa fa-folder-open me-2"/>My Projects</h5>
                                </div>
                                <div class="card-body p-0">
                                    <div class="table-responsive">
                                        <table class="table table-hover mb-0">
                                            <thead>
                                                <tr>
                                                    <th>Project</th>
                                                    <th>Customer</th>
                                                    <th>Tasks</th>
                                                    <th></th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <t t-foreach="state.myProjectsList" t-as="project" t-key="project.id">
                                                    <tr>
                                                        <td class="fw-medium"><t t-esc="project.name"/></td>
                                                        <td class="text-muted"><t t-esc="project.partner_name or '-'"/></td>
                                                        <td>
                                                            <span class="badge bg-secondary"><t t-esc="project.task_count"/> tasks</span>
                                                        </td>
                                                        <td class="text-end">
                                                            <button class="btn btn-sm btn-outline-primary" t-on-click="() => this.viewProject(project.id)">Open</button>
                                                        </td>
                                                    </tr>
                                                </t>
                                                <tr t-if="!state.myProjectsList || state.myProjectsList.length === 0">
                                                    <td colspan="4" class="text-center text-muted py-4">No projects</td>
                                                </tr>
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                                <div class="card-footer ptt-pagination">
                                    <button class="ptt-pagination-btn" t-on-click="prevProjectPage" t-att-disabled="state.projectPage &lt;= 1">
                                        <i class="fa fa-chevron-left"/>
                                    </button>
                                    <span class="ptt-pagination-text">Page <t t-esc="state.projectPage"/> of <t t-esc="state.projectPages"/></span>
                                    <button class="ptt-pagination-btn" t-on-click="nextProjectPage" t-att-disabled="state.projectPage >= state.projectPages">
                                        <i class="fa fa-chevron-right"/>
                                    </button>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-5">
                            <div class="card ptt-chart-card h-100">
                                <div class="card-header">
                                    <h5>Tasks by Stage</h5>
                                </div>
                                <div class="card-body d-flex align-items-center justify-content-center">
                                    <canvas t-ref="taskStagesChart" style="max-height: 250px;"/>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </t>
        </div>
    </t>
</templates>
