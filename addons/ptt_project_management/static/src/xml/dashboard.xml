<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <!--
        PTT Project Dashboard Template v2.6.0
        
        Layout (top to bottom):
        1. Compact filter bar
        2. KPI cards (4 across)
        3. My Tasks list
        4. Two donut charts side by side
        5. Full Month Calendar (at bottom)
    -->
    <t t-name="ptt_project_management.Dashboard">
        <div class="ptt-dashboard">
            <!-- Error Message -->
            <div t-if="state.error" class="alert alert-danger m-3" role="alert">
                <i class="fa fa-exclamation-triangle me-2"/>
                <strong>Error:</strong> <t t-esc="state.error"/>
                <button type="button" class="btn btn-sm btn-outline-danger ms-3" t-on-click="() => location.reload()">
                    <i class="fa fa-refresh me-1"/> Refresh
                </button>
            </div>

            <!-- Loading Spinner -->
            <div t-elif="state.loading" class="d-flex justify-content-center align-items-center flex-grow-1">
                <div class="spinner-border" role="status">
                    <span class="visually-hidden">Loading...</span>
                </div>
            </div>

            <t t-else="">
                <!-- COMPACT HEADER -->
                <div class="ptt-dashboard-header">
                    <div class="ptt-filter-row">
                        <!-- Date Period Pills -->
                        <div class="ptt-filter-group">
                            <label>Period</label>
                            <div class="ptt-date-pills">
                                <span class="ptt-date-pill" t-att-class="{'active': state.activePeriod === 'today'}" 
                                      t-on-click="() => this.setDatePeriod('today')">Today</span>
                                <span class="ptt-date-pill" t-att-class="{'active': state.activePeriod === 'week'}" 
                                      t-on-click="() => this.setDatePeriod('week')">Week</span>
                                <span class="ptt-date-pill" t-att-class="{'active': state.activePeriod === 'month'}" 
                                      t-on-click="() => this.setDatePeriod('month')">Month</span>
                                <span class="ptt-date-pill" t-att-class="{'active': !state.activePeriod || state.activePeriod === ''}" 
                                      t-on-click="() => this.setDatePeriod('')">All</span>
                            </div>
                        </div>
                        
                        <!-- Team Member Filter -->
                        <div class="ptt-filter-group">
                            <label>Team Member</label>
                            <select class="form-select" t-ref="userSelect" t-on-change="applyFilters">
                                <option value="">All Members</option>
                                <option value="me">Just Me</option>
                                <t t-foreach="state.users" t-as="user" t-key="user.id">
                                    <option t-att-value="user.id"><t t-esc="user.name"/></option>
                                </t>
                            </select>
                        </div>
                        
                        <!-- Project Filter -->
                        <div class="ptt-filter-group">
                            <label>Project</label>
                            <select class="form-select" t-ref="projectSelect" t-on-change="applyFilters">
                                <option value="">All Projects</option>
                                <t t-foreach="state.projects" t-as="project" t-key="project.id">
                                    <option t-att-value="project.id"><t t-esc="project.name"/></option>
                                </t>
                            </select>
                        </div>
                        
                        <!-- Action Buttons -->
                        <div class="ptt-actions">
                            <button class="ptt-refresh-btn" t-on-click="() => this.refreshDashboard(false)" 
                                    t-att-disabled="state.refreshing">
                                <i t-att-class="state.refreshing ? 'fa fa-spinner fa-spin' : 'fa fa-refresh'"/>
                                <span t-if="!state.refreshing">Refresh</span>
                            </button>
                        </div>
                    </div>
                </div>

                <!-- SCROLLABLE BODY -->
                <div class="ptt-dashboard-body">
                    
                    <!-- 1. SALES SECTION: Chart + 2 stacked KPIs -->
                    <div class="ptt-sales-section mb-3">
                        <div class="ptt-sales-chart-tall">
                            <div class="ptt-chart-title">Sales by Rep</div>
                            <canvas t-ref="salesByRepChart"/>
                        </div>
                        <div class="ptt-sales-kpis-stack">
                            <div class="ptt-sales-kpi ptt-kpi-success" t-on-click="openConfirmedSOs">
                                <div class="ptt-sales-value">$<t t-esc="state.totalRevenue"/></div>
                                <div class="ptt-sales-label">Total Confirmed Sales</div>
                            </div>
                            <div class="ptt-sales-kpi ptt-kpi-gold">
                                <div class="ptt-sales-icon"><i class="fa fa-trophy"/></div>
                                <div class="ptt-sales-value"><t t-esc="state.topSalesRep || '-'"/></div>
                                <div class="ptt-sales-label">Sales Leader ($<t t-esc="state.topSalesAmount || '0'"/>)</div>
                            </div>
                        </div>
                    </div>

                    <!-- 2. KPI GRID - 6 compact cards (2 rows of 3) -->
                    <div class="ptt-kpi-grid">
                        <div class="ptt-kpi-card ptt-kpi-primary" t-on-click="openMyTasks">
                            <div class="ptt-kpi-value"><t t-esc="state.myTasks"/></div>
                            <div class="ptt-kpi-label">My Tasks</div>
                        </div>
                        <div class="ptt-kpi-card" t-on-click="openMyProjects">
                            <div class="ptt-kpi-value"><t t-esc="state.myProjects"/></div>
                            <div class="ptt-kpi-label">My Projects</div>
                        </div>
                        <div class="ptt-kpi-card ptt-kpi-danger" t-on-click="openMyOverdueTasks">
                            <div class="ptt-kpi-value"><t t-esc="state.myOverdueTasks"/></div>
                            <div class="ptt-kpi-label">Overdue</div>
                        </div>
                        <div class="ptt-kpi-card ptt-kpi-warning" t-on-click="openDueThisWeek">
                            <div class="ptt-kpi-value"><t t-esc="state.dueThisWeek"/></div>
                            <div class="ptt-kpi-label">Due This Week</div>
                        </div>
                        <div class="ptt-kpi-card ptt-kpi-muted" t-on-click="openUnassignedTasks">
                            <div class="ptt-kpi-value"><t t-esc="state.unassignedTasks"/></div>
                            <div class="ptt-kpi-label">Unassigned</div>
                        </div>
                        <div class="ptt-kpi-card ptt-kpi-muted" t-on-click="openNoDueDateTasks">
                            <div class="ptt-kpi-value"><t t-esc="state.noDueDateTasks"/></div>
                            <div class="ptt-kpi-label">No Due Date</div>
                        </div>
                    </div>

                    <!-- 2. MY TASKS LIST -->
                    <div class="card ptt-list-card mb-3">
                        <div class="card-header d-flex justify-content-between align-items-center">
                            <h5 class="mb-0"><i class="fa fa-tasks me-2"/>My Tasks</h5>
                            <div class="ptt-pagination-inline">
                                <button class="ptt-page-btn" t-on-click="prevTaskPage" t-att-disabled="state.taskPage &lt;= 1">
                                    <i class="fa fa-chevron-left"/>
                                </button>
                                <span><t t-esc="state.taskPage"/>/<t t-esc="state.taskPages"/></span>
                                <button class="ptt-page-btn" t-on-click="nextTaskPage" t-att-disabled="state.taskPage >= state.taskPages">
                                    <i class="fa fa-chevron-right"/>
                                </button>
                            </div>
                        </div>
                        <div class="card-body p-0">
                            <div class="table-responsive">
                                <table class="table table-hover mb-0 ptt-compact-table">
                                    <thead>
                                        <tr>
                                            <th>Task</th>
                                            <th>Project</th>
                                            <th>Stage</th>
                                            <th>Due Date</th>
                                            <th></th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <t t-foreach="state.myTasksList" t-as="task" t-key="task.id">
                                            <tr t-att-class="{'ptt-row-overdue': task.is_overdue}">
                                                <td class="fw-medium"><t t-esc="task.name"/></td>
                                                <td class="text-muted"><t t-esc="task.project_name"/></td>
                                                <td><span class="badge bg-secondary"><t t-esc="task.stage_name || '-'"/></span></td>
                                                <td>
                                                    <span t-if="task.deadline_display" 
                                                          t-att-class="task.is_overdue ? 'badge bg-danger' : 'badge bg-info'">
                                                        <t t-esc="task.deadline_display"/>
                                                    </span>
                                                    <span t-else="" class="text-muted">-</span>
                                                </td>
                                                <td class="text-end">
                                                    <button class="btn btn-sm btn-outline-primary py-0 px-2" t-on-click="() => this.viewTask(task.id)">Open</button>
                                                </td>
                                            </tr>
                                        </t>
                                        <tr t-if="!state.myTasksList || state.myTasksList.length === 0">
                                            <td colspan="5" class="text-center text-muted py-3">No tasks assigned to you</td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>

                    <!-- 4. FULL MONTH CALENDAR (AT BOTTOM) -->
                    <div class="card ptt-calendar-card mb-3">
                        <div class="card-header">
                            <div class="ptt-cal-nav">
                                <button class="ptt-cal-nav-btn" t-on-click="prevMonth">
                                    <i class="fa fa-chevron-left"/>
                                </button>
                                <h5 class="ptt-cal-title"><t t-esc="state.calendarTitle"/></h5>
                                <button class="ptt-cal-nav-btn" t-on-click="nextMonth">
                                    <i class="fa fa-chevron-right"/>
                                </button>
                                <button class="ptt-cal-today-btn" t-on-click="goToToday">Today</button>
                            </div>
                            <div class="ptt-legend">
                                <span class="ptt-legend-item"><span class="ptt-legend-dot ptt-lead"></span> Lead</span>
                                <span class="ptt-legend-item"><span class="ptt-legend-dot ptt-quote"></span> Quote</span>
                                <span class="ptt-legend-item"><span class="ptt-legend-dot ptt-booked"></span> Booked</span>
                            </div>
                        </div>
                        <div class="card-body p-2">
                            <div class="ptt-cal-grid">
                                <div class="ptt-cal-header">Sun</div>
                                <div class="ptt-cal-header">Mon</div>
                                <div class="ptt-cal-header">Tue</div>
                                <div class="ptt-cal-header">Wed</div>
                                <div class="ptt-cal-header">Thu</div>
                                <div class="ptt-cal-header">Fri</div>
                                <div class="ptt-cal-header">Sat</div>
                                <t t-foreach="state.calendarDays" t-as="day" t-key="day.date">
                                    <div t-att-class="'ptt-cal-day' + (day.isToday ? ' ptt-cal-today' : '') + (day.isOtherMonth ? ' ptt-cal-other' : '')">
                                        <div class="ptt-cal-day-num"><t t-esc="day.dayNum"/></div>
                                        <div class="ptt-cal-events">
                                            <t t-foreach="day.events.slice(0, 2)" t-as="event" t-key="event.id">
                                                <div t-att-class="'ptt-cal-event ptt-cal-event-' + event.status" 
                                                     t-on-click.stop="() => this.viewEvent(event)"
                                                     t-att-title="event.name + ' - ' + (event.customer || 'No customer')">
                                                    <t t-esc="event.name.substring(0, 10)"/><t t-if="event.name.length > 10">...</t>
                                                </div>
                                            </t>
                                            <div t-if="day.events.length > 2" class="ptt-cal-more">
                                                +<t t-esc="day.events.length - 2"/>
                                            </div>
                                        </div>
                                    </div>
                                </t>
                            </div>
                        </div>
                    </div>

                </div>
            </t>
        </div>
    </t>
</templates>
