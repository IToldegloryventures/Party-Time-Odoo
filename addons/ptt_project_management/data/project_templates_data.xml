<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        
        <!-- Corporate Event Templates -->
        <record id="template_corporate_conference" model="project.template">
            <field name="name">Corporate Conference Template</field>
            <field name="code">CORP_CONF_TMPL</field>
            <field name="category">corporate</field>
            <field name="sequence">10</field>
            <field name="description">Template for corporate conferences and business meetings</field>
            <field name="default_project_name">Conference - [CLIENT_NAME] - [EVENT_DATE]</field>
            <field name="default_project_duration">30</field>
            <field name="lead_time_days">21</field>
            <field name="requires_dj">True</field>
            <field name="requires_lighting">True</field>
            <field name="requires_photo">True</field>
            <field name="privacy_visibility">employees</field>
            <field name="color">1</field>
        </record>

        <record id="template_wedding" model="project.template">
            <field name="name">Wedding Template</field>
            <field name="code">WEDDING_TMPL</field>
            <field name="category">private</field>
            <field name="sequence">20</field>
            <field name="description">Template for wedding ceremonies and receptions</field>
            <field name="default_project_name">Wedding - [CLIENT_NAME] - [EVENT_DATE]</field>
            <field name="default_project_duration">90</field>
            <field name="lead_time_days">60</field>
            <field name="requires_dj">True</field>
            <field name="requires_photo">True</field>
            <field name="requires_lighting">True</field>
            <field name="requires_decor">True</field>
            <field name="privacy_visibility">followers</field>
            <field name="color">6</field>
        </record>

        <record id="template_casino_night" model="project.template">
            <field name="name">Casino Night Template</field>
            <field name="code">CASINO_TMPL</field>
            <field name="category">themed</field>
            <field name="sequence">30</field>
            <field name="description">Template for casino themed events</field>
            <field name="default_project_name">Casino Night - [CLIENT_NAME] - [EVENT_DATE]</field>
            <field name="default_project_duration">21</field>
            <field name="lead_time_days">14</field>
            <field name="requires_dj">True</field>
            <field name="requires_lighting">True</field>
            <field name="requires_decor">True</field>
            <field name="privacy_visibility">followers</field>
            <field name="color">5</field>
        </record>

        <!-- Task Templates for Corporate Conference -->
        <record id="task_conf_venue_walkthrough" model="project.task.template">
            <field name="name">Venue Walkthrough &amp; Assessment</field>
            <field name="description">Visit venue to assess layout, equipment needs, and logistics</field>
            <field name="project_template_id" ref="template_corporate_conference"/>
            <field name="sequence">10</field>
            <field name="planned_hours">2</field>
            <field name="days_before_event">14</field>
            <field name="vendor_category">venue_sourcing</field>
            <field name="requires_vendor">True</field>
        </record>

        <record id="task_conf_av_setup" model="project.task.template">
            <field name="name">AV Equipment Setup</field>
            <field name="description">Setup projectors, screens, microphones, and sound system</field>
            <field name="project_template_id" ref="template_corporate_conference"/>
            <field name="sequence">20</field>
            <field name="planned_hours">4</field>
            <field name="days_before_event">1</field>
            <field name="vendor_category">lighting</field>
            <field name="requires_vendor">True</field>
        </record>

        <record id="task_conf_registration" model="project.task.template">
            <field name="name">Registration Setup</field>
            <field name="description">Setup registration desk and welcome materials</field>
            <field name="project_template_id" ref="template_corporate_conference"/>
            <field name="sequence">30</field>
            <field name="planned_hours">2</field>
            <field name="days_before_event">0</field>
        </record>

        <record id="task_conf_event_coord" model="project.task.template">
            <field name="name">Event Day Coordination</field>
            <field name="description">Oversee event execution and coordinate all vendors</field>
            <field name="project_template_id" ref="template_corporate_conference"/>
            <field name="sequence">40</field>
            <field name="planned_hours">8</field>
            <field name="days_before_event">0</field>
            <field name="is_milestone">True</field>
        </record>

        <!-- Task Templates for Wedding -->
        <record id="task_wedding_consultation" model="project.task.template">
            <field name="name">Initial Wedding Consultation</field>
            <field name="description">Meet with couple to discuss vision, preferences, and requirements</field>
            <field name="project_template_id" ref="template_wedding"/>
            <field name="sequence">10</field>
            <field name="planned_hours">3</field>
            <field name="days_before_event">60</field>
        </record>

        <record id="task_wedding_venue_coord" model="project.task.template">
            <field name="name">Venue Coordination Meeting</field>
            <field name="description">Meet with venue coordinator to plan layout and logistics</field>
            <field name="project_template_id" ref="template_wedding"/>
            <field name="sequence">20</field>
            <field name="planned_hours">2</field>
            <field name="days_before_event">30</field>
            <field name="vendor_category">venue_sourcing</field>
            <field name="requires_vendor">True</field>
        </record>

        <record id="task_wedding_rehearsal" model="project.task.template">
            <field name="name">Wedding Rehearsal</field>
            <field name="description">Coordinate wedding rehearsal with all participants</field>
            <field name="project_template_id" ref="template_wedding"/>
            <field name="sequence">30</field>
            <field name="planned_hours">2</field>
            <field name="days_before_event">1</field>
        </record>

        <record id="task_wedding_ceremony" model="project.task.template">
            <field name="name">Wedding Ceremony Coordination</field>
            <field name="description">Coordinate ceremony setup, processional, and ceremony execution</field>
            <field name="project_template_id" ref="template_wedding"/>
            <field name="sequence">40</field>
            <field name="planned_hours">6</field>
            <field name="days_before_event">0</field>
            <field name="is_milestone">True</field>
        </record>

        <record id="task_wedding_reception" model="project.task.template">
            <field name="name">Reception Coordination</field>
            <field name="description">Coordinate reception setup, dinner service, and entertainment</field>
            <field name="project_template_id" ref="template_wedding"/>
            <field name="sequence">50</field>
            <field name="planned_hours">6</field>
            <field name="days_before_event">0</field>
            <field name="is_milestone">True</field>
        </record>

        <!-- Task Templates for Casino Night -->
        <record id="task_casino_equipment" model="project.task.template">
            <field name="name">Casino Equipment Setup</field>
            <field name="description">Setup casino tables, chips, and gaming equipment</field>
            <field name="project_template_id" ref="template_casino_night"/>
            <field name="sequence">10</field>
            <field name="planned_hours">4</field>
            <field name="days_before_event">0</field>
            <field name="vendor_category">other</field>
            <field name="requires_vendor">True</field>
        </record>

        <record id="task_casino_staffing" model="project.task.template">
            <field name="name">Casino Staff Coordination</field>
            <field name="description">Coordinate dealers, cashiers, and gaming staff</field>
            <field name="project_template_id" ref="template_casino_night"/>
            <field name="sequence">20</field>
            <field name="planned_hours">2</field>
            <field name="days_before_event">0</field>
            <field name="vendor_category">staffing</field>
        </record>

        <record id="task_casino_event" model="project.task.template">
            <field name="name">Casino Night Event Management</field>
            <field name="description">Oversee casino operations and guest experience</field>
            <field name="project_template_id" ref="template_casino_night"/>
            <field name="sequence">30</field>
            <field name="planned_hours">5</field>
            <field name="days_before_event">0</field>
            <field name="is_milestone">True</field>
        </record>

        <!-- Stakeholder Templates for Corporate Conference -->
        <record id="stakeholder_conf_coordinator" model="project.stakeholder.template">
            <field name="project_template_id" ref="template_corporate_conference"/>
            <field name="sequence">10</field>
            <field name="role">Event Coordinator</field>
            <field name="responsibility">Overall event coordination and client communication</field>
            <field name="is_internal">True</field>
            <field name="communication_preference">email</field>
            <field name="required_for_event">True</field>
        </record>

        <record id="stakeholder_conf_av_tech" model="project.stakeholder.template">
            <field name="project_template_id" ref="template_corporate_conference"/>
            <field name="sequence">20</field>
            <field name="role">AV Technician</field>
            <field name="responsibility">Setup and operate audio/visual equipment</field>
            <field name="is_vendor">True</field>
            <field name="vendor_category">lighting</field>
            <field name="communication_preference">phone</field>
            <field name="required_for_event">True</field>
        </record>

        <record id="stakeholder_conf_photographer" model="project.stakeholder.template">
            <field name="project_template_id" ref="template_corporate_conference"/>
            <field name="sequence">30</field>
            <field name="role">Event Photographer</field>
            <field name="responsibility">Document conference sessions and networking</field>
            <field name="is_vendor">True</field>
            <field name="vendor_category">photovideo</field>
            <field name="communication_preference">email</field>
            <field name="required_for_event">False</field>
        </record>

        <!-- Stakeholder Templates for Wedding -->
        <record id="stakeholder_wedding_planner" model="project.stakeholder.template">
            <field name="project_template_id" ref="template_wedding"/>
            <field name="sequence">10</field>
            <field name="role">Wedding Planner</field>
            <field name="responsibility">Overall wedding planning and day-of coordination</field>
            <field name="is_internal">True</field>
            <field name="communication_preference">email</field>
            <field name="required_for_event">True</field>
        </record>

        <record id="stakeholder_wedding_dj" model="project.stakeholder.template">
            <field name="project_template_id" ref="template_wedding"/>
            <field name="sequence">20</field>
            <field name="role">Wedding DJ</field>
            <field name="responsibility">Music for ceremony and reception</field>
            <field name="is_vendor">True</field>
            <field name="vendor_category">dj</field>
            <field name="communication_preference">phone</field>
            <field name="required_for_event">True</field>
        </record>

        <record id="stakeholder_wedding_photographer" model="project.stakeholder.template">
            <field name="project_template_id" ref="template_wedding"/>
            <field name="sequence">30</field>
            <field name="role">Wedding Photographer</field>
            <field name="responsibility">Capture ceremony and reception moments</field>
            <field name="is_vendor">True</field>
            <field name="vendor_category">photovideo</field>
            <field name="communication_preference">email</field>
            <field name="required_for_event">True</field>
        </record>

        <!-- Stakeholder Templates for Casino Night -->
        <record id="stakeholder_casino_coordinator" model="project.stakeholder.template">
            <field name="project_template_id" ref="template_casino_night"/>
            <field name="sequence">10</field>
            <field name="role">Casino Event Coordinator</field>
            <field name="responsibility">Coordinate casino operations and entertainment</field>
            <field name="is_internal">True</field>
            <field name="communication_preference">email</field>
            <field name="required_for_event">True</field>
        </record>

        <record id="stakeholder_casino_manager" model="project.stakeholder.template">
            <field name="project_template_id" ref="template_casino_night"/>
            <field name="sequence">20</field>
            <field name="role">Casino Operations Manager</field>
            <field name="responsibility">Oversee gaming tables and staff</field>
            <field name="is_vendor">True</field>
            <field name="vendor_category">other</field>
            <field name="communication_preference">phone</field>
            <field name="required_for_event">True</field>
        </record>

    </data>
</odoo>