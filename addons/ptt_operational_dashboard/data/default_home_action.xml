<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- 
    RESTORE Odoo's default home action to prevent blank screens.
    This ensures the standard Odoo apps menu is shown on login.
    PTT Home Hub is accessible as a separate app in the apps grid.
    -->
    <data noupdate="0">
        <record id="base.action_client_base_menu" model="ir.actions.client">
            <field name="name">Menu</field>
            <field name="tag">menu</field>
        </record>
    </data>
</odoo>
