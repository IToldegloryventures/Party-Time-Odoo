<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="ptt_operational_dashboard.TaskLeaderboard">
        <div class="ptt-task-leaderboard">
            <div class="ptt-section-header mb-3">
                <h2><i class="fa fa-trophy"/> Task Performance Leaderboard</h2>
            </div>
            
            <div class="ptt-card">
                <t t-if="props.leaderboard.length === 0">
                    <div class="ptt-empty-state">
                        <i class="fa fa-info-circle"/>
                        <p>No task data available</p>
                    </div>
                </t>
                <t t-else="">
                    <div class="table-responsive" style="max-height: 600px; overflow-y: auto;">
                        <table class="table table-hover mb-0">
                            <thead class="sticky-top" style="background: #F9FAFB; z-index: 10;">
                                <tr>
                                    <th style="width: 60px;">Rank</th>
                                    <th>User</th>
                                    <th class="text-center" style="width: 100px;">Total</th>
                                    <th class="text-center" style="width: 100px;">Completed</th>
                                    <th class="text-center" style="width: 100px;">Overdue</th>
                                    <th class="text-center" style="min-width: 150px;">Completion Rate</th>
                                    <th class="text-center" style="width: 80px;">Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-foreach="props.leaderboard" t-as="user" t-key="user.id">
                                    <tr t-on-click="() => this.onUserClick(user)" style="cursor: pointer;">
                                        <td>
                                            <span t-att-class="'badge ' + (user_index === 0 ? 'bg-warning text-dark' : 'bg-primary')" style="font-size: 0.875rem; padding: 0.4rem 0.6rem; font-weight: 700;">
                                                <t t-if="user_index === 0">
                                                    <i class="fa fa-trophy me-1"/>
                                                </t>
                                                <t t-esc="user_index + 1"/>
                                            </span>
                                        </td>
                                        <td>
                                            <div class="d-flex align-items-center">
                                                <div class="ptt-user-avatar me-3">
                                                    <span class="badge" style="background: linear-gradient(135deg, #6366F1 0%, #8B5CF6 100%); width: 44px; height: 44px; border-radius: 50%; display: flex; align-items: center; justify-content: center; font-weight: 700; font-size: 0.95rem; box-shadow: 0 2px 8px rgba(99, 102, 241, 0.3);">
                                                        <t t-esc="user.initials"/>
                                                    </span>
                                                </div>
                                                <div>
                                                    <strong style="font-size: 0.95rem; color: #1F2937;"><t t-esc="user.name"/></strong>
                                                </div>
                                            </div>
                                        </td>
                                        <td class="text-center">
                                            <span class="badge bg-info" style="font-size: 0.875rem; padding: 0.4rem 0.6rem; font-weight: 600;">
                                                <t t-esc="user.total_tasks"/>
                                            </span>
                                        </td>
                                        <td class="text-center">
                                            <span class="badge bg-success" style="font-size: 0.875rem; padding: 0.4rem 0.6rem; font-weight: 600;">
                                                <t t-esc="user.completed_tasks"/>
                                            </span>
                                        </td>
                                        <td class="text-center">
                                            <span t-att-class="'badge ' + (user.overdue_tasks > 0 ? 'bg-danger' : 'bg-secondary')" style="font-size: 0.875rem; padding: 0.4rem 0.6rem; font-weight: 600;">
                                                <t t-esc="user.overdue_tasks"/>
                                            </span>
                                        </td>
                                        <td class="text-center">
                                            <div class="progress" style="height: 24px; border-radius: 12px; overflow: hidden; box-shadow: inset 0 1px 2px rgba(0,0,0,0.1);">
                                                <div 
                                                    t-att-class="'progress-bar ' + (user.completion_rate >= 80 ? 'bg-success' : user.completion_rate >= 50 ? 'bg-warning' : 'bg-danger')"
                                                    t-att-style="'width: ' + user.completion_rate + '%'"
                                                    role="progressbar"
                                                    t-att-aria-valuenow="user.completion_rate"
                                                    aria-valuemin="0"
                                                    aria-valuemax="100"
                                                    style="display: flex; align-items: center; justify-content: center; font-weight: 600; font-size: 0.75rem;">
                                                    <t t-esc="formatPercentage(user.completion_rate)"/>
                                                </div>
                                            </div>
                                        </td>
                                        <td class="text-center">
                                            <button class="btn btn-sm btn-outline-primary" 
                                                    t-on-click.stop="() => this.onUserClick(user)"
                                                    title="View User's Tasks"
                                                    style="border-radius: 8px; padding: 0.35rem 0.6rem;">
                                                <i class="fa fa-external-link"/>
                                            </button>
                                        </td>
                                    </tr>
                                </t>
                            </tbody>
                        </table>
                    </div>
                </t>
            </div>
        </div>
    </t>
</templates>

