<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="ptt_operational_dashboard.PersonalTodo">
        <div class="ptt-section">
            <div class="ptt-section-header">
                <h2><i class="fa fa-check-square-o"/> Personal To-Do</h2>
            </div>
            
            <div class="ptt-card">
                <div class="ptt-todo-list">
                    <t t-if="allTodos.length === 0">
                        <div class="ptt-empty-state small">
                            <i class="fa fa-list-ul"/>
                            <p>No personal to-do items</p>
                        </div>
                    </t>
                    <t t-else="">
                        <t t-foreach="allTodos" t-as="todo" t-key="todo.id">
                            <div class="ptt-todo-item">
                                <div 
                                    class="ptt-todo-checkbox"
                                    t-on-click="() => this.onToggleTodo(todo)"
                                    title="Mark as done">
                                    <i class="fa fa-check" style="display: none;"/>
                                </div>
                                <div class="ptt-todo-name">
                                    <t t-esc="todo.name"/>
                                    <small t-if="todo.due_date" class="text-muted ms-2">
                                        <i class="fa fa-clock-o"/>
                                        <t t-esc="formatDate(todo.due_date)"/>
                                    </small>
                                </div>
                                <button 
                                    class="ptt-todo-delete"
                                    t-on-click="(ev) => this.onDeleteTodo(ev, todo)"
                                    title="Delete">
                                    <i class="fa fa-trash-o"/>
                                </button>
                            </div>
                        </t>
                    </t>
                    
                    <!-- Add New Todo -->
                    <div class="ptt-todo-add">
                        <input 
                            type="text" 
                            placeholder="Add a personal to-do..."
                            t-att-value="state.newTodoName"
                            t-on-input="onInputChange"
                            t-on-keypress="onKeyPress"
                            t-att-disabled="state.loading"/>
                        <button 
                            t-on-click="onAddTodo"
                            t-att-disabled="state.loading || !state.newTodoName.trim()">
                            <i class="fa fa-plus me-1"/>
                            Add
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </t>
</templates>

