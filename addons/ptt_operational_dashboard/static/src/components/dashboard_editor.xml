<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="ptt_operational_dashboard.DashboardEditor">
        <div class="ptt-dashboard-editor">
            <div class="ptt-editor-header">
                <h2><i class="fa fa-edit"/> Dashboard Editor</h2>
                <div class="d-flex gap-2">
                    <button class="btn btn-primary" t-on-click="saveChanges">
                        <i class="fa fa-save me-1"/> Save Changes
                    </button>
                    <button class="btn btn-outline-secondary" t-on-click="() => this.state.editMode = !this.state.editMode">
                        <i class="fa" t-att-class="state.editMode ? 'fa-eye' : 'fa-edit'"/>
                        <t t-esc="state.editMode ? 'Preview' : 'Edit'"/>
                    </button>
                </div>
            </div>
            
            <t t-if="state.loading">
                <div class="ptt-loading">
                    <div class="ptt-spinner"/>
                </div>
            </t>
            
            <t t-else="">
                <div class="ptt-editor-layout">
                    <!-- Left Sidebar: Available Metrics Library -->
                    <div class="ptt-editor-sidebar ptt-editor-library">
                        <h3><i class="fa fa-th"/> Available Metrics</h3>
                        <div class="ptt-metric-library">
                            <t t-foreach="state.metrics" t-as="metric" t-key="metric.id">
                                <div class="ptt-library-item" 
                                     draggable="true"
                                     t-on-dragstart="(ev) => this.onDragStart(ev, metric)">
                                    <i class="fa fa-grip-vertical me-2"/>
                                    <span t-esc="metric.metric_label"/>
                                    <span class="badge" t-att-class="metric.visible ? 'bg-success' : 'bg-secondary'">
                                        <t t-esc="metric.visible ? 'Visible' : 'Hidden'"/>
                                    </span>
                                </div>
                            </t>
                        </div>
                    </div>
                    
                    <!-- Center Canvas: Current Dashboard Layout -->
                    <div class="ptt-editor-canvas">
                        <h3>Dashboard Layout</h3>
                        <div class="ptt-canvas-area" 
                             t-on-dragover="onDragOver"
                             t-on-drop="(ev) => this.onDrop(ev, 0)">
                            <t t-foreach="getMetricsByTab('sales')" t-as="metric" t-key="metric.id">
                                <div class="ptt-canvas-item" 
                                     draggable="true"
                                     t-att-class="'ptt-kpi-' + metric.kpi_size"
                                     t-on-click="() => this.onItemClick(metric)"
                                     t-on-dragstart="(ev) => this.onDragStart(ev, metric)">
                                    <div class="ptt-canvas-item-header">
                                        <i class="fa fa-grip-vertical"/>
                                        <span t-esc="metric.metric_label"/>
                                        <button class="btn btn-sm" 
                                                t-on-click.stop="() => this.toggleVisibility(metric.id, metric.visible)">
                                            <i class="fa" t-att-class="metric.visible ? 'fa-eye' : 'fa-eye-slash'"/>
                                        </button>
                                    </div>
                                </div>
                            </t>
                        </div>
                    </div>
                    
                    <!-- Right Sidebar: Properties Panel -->
                    <div class="ptt-editor-sidebar ptt-editor-properties">
                        <h3><i class="fa fa-cog"/> Properties</h3>
                        <t t-if="state.selectedItem">
                            <div class="ptt-properties-panel">
                                <div class="mb-3">
                                    <label class="form-label">Metric Name</label>
                                    <input type="text" class="form-control" t-model="state.selectedItem.metric_label" readonly="1"/>
                                </div>
                                <div class="mb-3">
                                    <label class="form-label">KPI Size</label>
                                    <select class="form-select" t-model="state.selectedItem.kpi_size">
                                        <option value="large">Large</option>
                                        <option value="compact">Compact</option>
                                    </select>
                                </div>
                                <div class="mb-3">
                                    <label class="form-label">Visible</label>
                                    <input type="checkbox" t-model="state.selectedItem.visible"/>
                                </div>
                                <div class="mb-3">
                                    <label class="form-label">Green Threshold (Min)</label>
                                    <input type="number" class="form-control" t-model="state.selectedItem.threshold_green_min"/>
                                </div>
                                <div class="mb-3">
                                    <label class="form-label">Yellow Threshold (Min)</label>
                                    <input type="number" class="form-control" t-model="state.selectedItem.threshold_yellow_min"/>
                                </div>
                                <div class="mb-3">
                                    <label class="form-label">Red Threshold (Max)</label>
                                    <input type="number" class="form-control" t-model="state.selectedItem.threshold_red_max"/>
                                </div>
                            </div>
                        </t>
                        <t t-else="">
                            <p class="text-muted">Select an item to edit its properties</p>
                        </t>
                    </div>
                </div>
            </t>
        </div>
    </t>
</templates>

