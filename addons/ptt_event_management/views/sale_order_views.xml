<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Sale Order Form View Extension -->
    <record id="sale_order_view_form_ptt_event" model="ir.ui.view">
        <field name="name">sale.order.form.ptt.event</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="priority">100</field>
        <field name="arch" type="xml">
            
            <!-- Add Event Overview tab -->
            <xpath expr="//page[@name='other_information']" position="after">
                <page string="Event Details" name="ptt_event_details">
                    
                    <!-- EVENT OVERVIEW -->
                    <group string="Event Overview">
                        <group>
                            <field name="ptt_event_type"/>
                            <field name="ptt_event_name"/>
                            <field name="ptt_event_date"/>
                            <field name="ptt_event_start_time"/>
                            <field name="ptt_event_end_time"/>
                        </group>
                        <group>
                            <field name="ptt_guest_count"/>
                            <field name="ptt_total_hours" readonly="1"/>
                            <field name="ptt_event_location_type"/>
                            <field name="ptt_venue_booked"/>
                            <field name="ptt_venue_name" invisible="not ptt_venue_booked"/>
                        </group>
                    </group>
                    
                </page>
            </xpath>
            
            <!-- Add Price Per Person and Guest Count near totals -->
            <xpath expr="//field[@name='amount_total']" position="after">
                <field name="ptt_guest_count" string="Guests"/>
                <field name="ptt_price_per_person"/>
            </xpath>
            
        </field>
    </record>

    <!-- Sale Order Quotation Template Form View Extension (for quotes) -->
    <record id="sale_order_template_view_form_ptt_event" model="ir.ui.view">
        <field name="name">sale.order.template.form.ptt.event</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_quotation_tree"/>
        <field name="priority">100</field>
        <field name="arch" type="xml">
            
            <!-- Add Event Date to list view -->
            <xpath expr="//field[@name='partner_id']" position="after">
                <field name="ptt_event_date" optional="show"/>
                <field name="ptt_event_type" optional="hide"/>
            </xpath>
            
        </field>
    </record>

</odoo>
