<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Invoice Form View Extension -->
    <record id="account_move_view_form_ptt_event" model="ir.ui.view">
        <field name="name">account.move.form.ptt.event</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="priority">100</field>
        <field name="arch" type="xml">
            
            <!-- Add Event Overview tab -->
            <xpath expr="//page[@name='other_info']" position="after">
                <page string="Event Details" name="ptt_event_details"
                      invisible="move_type not in ('out_invoice', 'out_refund')">
                    
                    <!-- EVENT OVERVIEW -->
                    <group string="Event Overview">
                        <group>
                            <field name="ptt_event_type" readonly="1"/>
                            <field name="ptt_event_name" readonly="1"/>
                            <field name="ptt_event_date" readonly="1"/>
                            <field name="ptt_event_start_time" readonly="1"/>
                            <field name="ptt_event_end_time" readonly="1"/>
                        </group>
                        <group>
                            <field name="ptt_guest_count" readonly="1"/>
                            <field name="ptt_total_hours" readonly="1"/>
                            <field name="ptt_event_location_type" readonly="1"/>
                            <field name="ptt_venue_booked" readonly="1"/>
                            <field name="ptt_venue_name" readonly="1" 
                                   invisible="not ptt_venue_booked"/>
                        </group>
                    </group>
                    
                    <!-- Hidden helper field -->
                    <field name="ptt_sale_order_id" invisible="1"/>
                    
                </page>
            </xpath>
            
            <!-- Add Price Per Person and Guest Count near totals for customer invoices -->
            <xpath expr="//field[@name='amount_total']" position="after">
                <field name="ptt_guest_count" string="Guests" 
                       invisible="move_type not in ('out_invoice', 'out_refund')"/>
                <field name="ptt_price_per_person" 
                       invisible="move_type not in ('out_invoice', 'out_refund')"/>
            </xpath>
            
        </field>
    </record>

    <!-- Invoice List View Extension -->
    <record id="account_move_view_tree_ptt_event" model="ir.ui.view">
        <field name="name">account.move.tree.ptt.event</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_tree"/>
        <field name="priority">100</field>
        <field name="arch" type="xml">
            
            <!-- Add Event Date to list view -->
            <xpath expr="//field[@name='partner_id']" position="after">
                <field name="ptt_event_date" optional="hide"/>
            </xpath>
            
        </field>
    </record>

</odoo>
