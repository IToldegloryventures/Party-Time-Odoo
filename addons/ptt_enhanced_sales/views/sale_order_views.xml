<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
        <!-- Sale Order Form Extension -->
        <record id="view_sale_order_form_ptt" model="ir.ui.view">
            <field name="name">sale.order.form.ptt</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                
                <!-- Add Event Type after partner -->
                <xpath expr="//field[@name='partner_id']" position="after">
                    <field name="event_type_id"/>
                </xpath>

                <!-- Add Event Information Page -->
                <xpath expr="//notebook" position="inside">
                    <page string="Event Information" name="event_info">
                        <group>
                            <group string="Event Details">
                                <field name="event_name" placeholder="e.g., Smith Wedding Reception"/>
                                <field name="event_type_id" readonly="1"/>
                                <field name="event_guest_count" placeholder="Expected number of guests"/>
                                <field name="event_attire"/>
                            </group>
                            <group string="Event Date &amp; Time">
                                <field name="event_date" string="Event Start"/>
                                <field name="event_end_datetime" string="Event End"/>
                                <field name="event_duration" string="Duration (Hours)"/>
                            </group>
                        </group>
                        <group>
                            <group string="Venue Information">
                                <field name="event_venue" placeholder="Venue name"/>
                                <field name="event_venue_type"/>
                                <field name="event_venue_booked"/>
                                <field name="event_venue_address" placeholder="Full venue address"/>
                            </group>
                            <group string="Setup &amp; Breakdown">
                                <field name="setup_time" string="Setup Starts"/>
                                <field name="breakdown_time" string="Breakdown/Strike"/>
                            </group>
                        </group>
                        <separator string="Event Summary (shown on customer quotes)"/>
                        <field name="event_details_summary" readonly="1" nolabel="1" widget="text"/>
                    </page>

                    <!-- Service Lines (from CRM Opportunity) -->
                    <page string="Service Lines" name="ptt_service_lines" invisible="not opportunity_id">
                        <group>
                            <field name="ptt_service_line_ids" nolabel="1" readonly="1">
                                <list>
                                    <field name="sequence" optional="hide"/>
                                    <field name="service_type"/>
                                    <field name="service_tier"/>
                                    <field name="product_id"/>
                                    <field name="quantity"/>
                                    <field name="hours"/>
                                    <field name="unit_price"/>
                                    <field name="subtotal"/>
                                    <field name="notes" optional="hide"/>
                                </list>
                            </field>
                            <field name="ptt_service_lines_total" widget="monetary" readonly="1"/>
                        </group>
                    </page>

                    <!-- Quote Revisions Page -->
                    <page string="Revisions" name="revisions" invisible="not revision_ids">
                        <field name="revision_ids">
                            <list>
                                <field name="name"/>
                                <field name="revision_date"/>
                                <field name="user_id"/>
                                <field name="revision_reason"/>
                            </list>
                        </field>
                        <group>
                            <field name="is_revision"/>
                            <field name="revision_count"/>
                        </group>
                    </page>
                </xpath>
            </field>
        </record>

        <!-- Sale Order Tree Extension -->
        <record id="view_sale_order_tree_ptt" model="ir.ui.view">
            <field name="name">sale.order.tree.ptt</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_quotation_tree"/>
            <field name="arch" type="xml">
                <field name="partner_id" position="after">
                    <field name="event_type_id" optional="show"/>
                    <field name="event_date" optional="show"/>
                </field>
            </field>
        </record>

    </data>
</odoo>
