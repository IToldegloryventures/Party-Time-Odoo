<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
        <!-- Sale Order Form Extension -->
        <record id="view_sale_order_form_ptt" model="ir.ui.view">
            <field name="name">sale.order.form.ptt</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                
                <!-- Add Event Type after partner (readonly when confirmed) -->
                <xpath expr="//field[@name='partner_id']" position="after">
                    <field name="event_type" readonly="state in ('sale', 'done')"/>
                </xpath>

                <!-- Add Event Information Page -->
                <!-- All event fields are EDITABLE until order confirmed, then READ-ONLY -->
                <!-- Layout: Left = Event Details, Right = Date/Times -->
                <xpath expr="//notebook" position="inside">
                    <page string="Event Information" name="event_info">
                        <group>
                            <!-- LEFT COLUMN: Event Details -->
                            <group string="Event Details">
                                <field name="event_name" string="Event Name" placeholder="e.g., Smith Wedding Reception"
                                       readonly="state in ('sale', 'done')"/>
                                <field name="event_type" string="Event Type" readonly="state in ('sale', 'done')"/>
                                <field name="event_guest_count" string="Guest Count" placeholder="Expected number of guests"
                                       readonly="state in ('sale', 'done')"/>
                                <field name="event_attire" string="Attire" readonly="state in ('sale', 'done')"/>
                                <field name="event_venue_address" string="Address" placeholder="Full venue address"
                                       readonly="state in ('sale', 'done')"/>
                                <!-- Venue Details (conditional on Venue Booked) -->
                                <field name="event_venue_booked" string="Venue Booked?" widget="boolean_toggle"
                                       readonly="state in ('sale', 'done')"/>
                                <field name="event_venue" string="Venue Name" 
                                       readonly="state in ('sale', 'done')"
                                       invisible="not event_venue_booked"/>
                                <field name="event_venue_type" string="Venue Type"
                                       readonly="state in ('sale', 'done')"
                                       invisible="not event_venue_booked"/>
                            </group>
                            <!-- RIGHT COLUMN: Event Schedule (Date & Times) -->
                            <group string="Event Schedule">
                                <field name="event_date_only" string="Event Date"
                                       readonly="state in ('sale', 'done')"
                                       help="This date is used for project task deadlines"/>
                                <field name="event_start_time" string="Start Time"
                                       readonly="state in ('sale', 'done')"/>
                                <field name="event_end_time" string="End Time"
                                       readonly="state in ('sale', 'done')"/>
                                <field name="setup_time_float" string="Setup Time"
                                       readonly="state in ('sale', 'done')"/>
                                <field name="teardown_time_float" string="Teardown Time"
                                       readonly="state in ('sale', 'done')"/>
                            </group>
                        </group>
                        
                        <separator string="Event Summary (shown on customer quotes)"/>
                        <field name="event_details_summary" readonly="1" nolabel="1" widget="text"/>
                    </page>

                    <!-- Service Lines (from CRM Opportunity) -->
                    <page string="Service Lines" name="ptt_service_lines" invisible="not opportunity_id">
                        <group>
                            <field name="ptt_service_line_ids" nolabel="1" readonly="1">
                                <list>
                                    <field name="sequence" optional="hide"/>
                                    <field name="service_type"/>
                                    <field name="service_tier"/>
                                    <field name="product_id"/>
                                    <field name="quantity"/>
                                    <field name="hours"/>
                                    <field name="unit_price"/>
                                    <field name="subtotal"/>
                                    <field name="notes" optional="hide"/>
                                </list>
                            </field>
                            <field name="ptt_service_lines_total" widget="monetary" readonly="1"/>
                        </group>
                    </page>

                    <!-- Quote Revisions Page -->
                    <page string="Revisions" name="revisions" invisible="not revision_ids">
                        <field name="revision_ids">
                            <list>
                                <field name="name"/>
                                <field name="revision_date"/>
                                <field name="user_id"/>
                                <field name="revision_reason"/>
                            </list>
                        </field>
                        <group>
                            <field name="is_revision"/>
                            <field name="revision_count"/>
                        </group>
                    </page>
                </xpath>
            </field>
        </record>

        <!-- Sale Order Tree Extension -->
        <record id="view_sale_order_tree_ptt" model="ir.ui.view">
            <field name="name">sale.order.tree.ptt</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_quotation_tree"/>
            <field name="arch" type="xml">
                <field name="partner_id" position="after">
                    <field name="event_type" optional="show"/>
                    <field name="event_date" optional="show"/>
                </field>
            </field>
        </record>

    </data>
</odoo>
