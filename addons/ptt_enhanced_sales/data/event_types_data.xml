<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        <!--
        PTT Event Types
        ===============
        Only 3 event types matching product variant attributes:
        - Corporate
        - Social  
        - Wedding
        
        These map to the Event Type product attribute values.
        Each event type has its own Event Kickoff product with a direct template link:
        - Event Kickoff - Corporate → Corporate Event Project Template
        - Event Kickoff - Wedding → Wedding Event Project Template
        - Event Kickoff - Social → Social Event Project Template
        -->

        <!-- Corporate Event Type -->
        <record id="event_type_corporate" model="sale.order.type">
            <field name="name">Corporate</field>
            <field name="code">CORP</field>
            <field name="sequence">10</field>
            <field name="description">Corporate events including conferences, product launches, team building, holiday parties, and awards ceremonies.</field>
            <field name="default_duration_hours">6</field>
            <field name="default_setup_hours">2</field>
            <field name="default_breakdown_hours">1</field>
            <field name="color">1</field>
            <field name="project_template_id" ref="ptt_business_core.project_template_corporate"/>
            <field name="quotation_template_id" ref="ptt_enhanced_sales.so_template_event_corporate"/>
        </record>

        <!-- Social Event Type -->
        <record id="event_type_social" model="sale.order.type">
            <field name="name">Social</field>
            <field name="code">SOCIAL</field>
            <field name="sequence">20</field>
            <field name="description">Social events including birthday parties, anniversaries, reunions, graduations, and community gatherings.</field>
            <field name="default_duration_hours">4</field>
            <field name="default_setup_hours">2</field>
            <field name="default_breakdown_hours">1</field>
            <field name="color">3</field>
            <field name="project_template_id" ref="ptt_business_core.project_template_social"/>
            <field name="quotation_template_id" ref="ptt_enhanced_sales.so_template_event_social"/>
        </record>

        <!-- Wedding Event Type -->
        <record id="event_type_wedding" model="sale.order.type">
            <field name="name">Wedding</field>
            <field name="code">WEDDING</field>
            <field name="sequence">30</field>
            <field name="description">Wedding ceremonies and receptions including engagement parties, rehearsal dinners, and wedding celebrations.</field>
            <field name="default_duration_hours">8</field>
            <field name="default_setup_hours">4</field>
            <field name="default_breakdown_hours">2</field>
            <field name="color">6</field>
            <field name="project_template_id" ref="ptt_business_core.project_template_wedding"/>
            <field name="quotation_template_id" ref="ptt_enhanced_sales.so_template_event_wedding"/>
        </record>

    </data>
</odoo>
