<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Premium Contact Form - Party Time Texas -->
    
    <template id="contact_us_page" name="Contact Us - Party Time Texas">
        <t t-call="web.html_container">
            <head>
                <meta charset="UTF-8"/>
                <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
                <title>Contact Us - Party Time Texas</title>
                <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"/>
                <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@400;500;600;700&amp;display=swap"/>
                <link rel="stylesheet" type="text/css" href="/ptt_contact_forms/static/src/css/contact_form.css"/>
            </head>
            <body class="ptt-embed-body">
                
                <div class="ptt-form-wrapper">
                    <div class="ptt-form-card">
                        
                        <!-- Header -->
                        <div class="ptt-form-header">
                            <h1>Let's Plan Your Event</h1>
                            <p>Tell us about your vision and we'll make it happen</p>
                        </div>
                        
                        <!-- Error -->
                        <t t-if="error">
                            <div class="alert alert-danger mb-4"><t t-out="error"/></div>
                        </t>
                        
                        <form action="/contact-us/submit" method="POST" class="ptt-contact-form" id="contactForm">
                            <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                            <input type="hidden" name="embed" value="1"/>
                            
                            <!-- SECTION: Contact Info -->
                            <div class="ptt-section">
                                <div class="ptt-section-title">Your Information</div>
                                <div class="row g-3">
                                    <div class="col-md-6">
                                        <label class="form-label">Name <span class="text-danger">*</span></label>
                                        <input type="text" name="name" class="form-control ptt-input" required="required" placeholder="Your full name"/>
                                    </div>
                                    <div class="col-md-6">
                                        <label class="form-label">Company <span class="text-muted">(optional)</span></label>
                                        <input type="text" name="company" class="form-control ptt-input" placeholder="Company name"/>
                                    </div>
                                </div>
                                <div class="row g-3 mt-1">
                                    <div class="col-md-6">
                                        <label class="form-label">Email <span class="text-danger">*</span></label>
                                        <input type="email" name="email" class="form-control ptt-input" required="required" placeholder="your@email.com"/>
                                    </div>
                                    <div class="col-md-6">
                                        <label class="form-label">Phone <span class="text-danger">*</span></label>
                                        <input type="tel" name="phone" class="form-control ptt-input" required="required" placeholder="(555) 555-5555"/>
                                    </div>
                                </div>
                            </div>
                            
                            <!-- SECTION: Event Details -->
                            <div class="ptt-section">
                                <div class="ptt-section-title">Event Details</div>
                                <div class="row g-3">
                                    <div class="col-md-6">
                                        <label class="form-label">Event Type <span class="text-danger">*</span></label>
                                        <select name="event_type" class="form-select ptt-input" required="required">
                                            <option value="">Select event type...</option>
                                            <option value="Wedding/Reception">Wedding / Reception</option>
                                            <option value="Corporate Event">Corporate Event</option>
                                            <option value="Birthday (Adult)">Birthday (Adult)</option>
                                            <option value="Birthday (Teen)">Birthday (Teen)</option>
                                            <option value="Birthday (Child)">Birthday (Child)</option>
                                            <option value="Anniversary">Anniversary</option>
                                            <option value="Bar/Bat Mitzvah">Bar/Bat Mitzvah</option>
                                            <option value="Holiday Party">Holiday Party</option>
                                            <option value="School Function">School Function</option>
                                            <option value="Fund Raiser">Fund Raiser</option>
                                            <option value="Civic Event">Civic Event</option>
                                            <option value="Other Event">Other Event</option>
                                        </select>
                                    </div>
                                    <div class="col-md-6">
                                        <label class="form-label">Event Date <span class="text-danger">*</span></label>
                                        <input type="date" name="event_date" class="form-control ptt-input" required="required"/>
                                    </div>
                                </div>
                                <div class="row g-3 mt-1">
                                    <div class="col-md-6">
                                        <label class="form-label">Location <span class="text-danger">*</span></label>
                                        <input type="text" name="event_location" class="form-control ptt-input" required="required" placeholder="Venue name or city"/>
                                    </div>
                                    <div class="col-md-6">
                                        <label class="form-label">Time <span class="text-danger">*</span></label>
                                        <input type="text" name="event_time" class="form-control ptt-input" required="required" placeholder="e.g., 6:00 PM - 11:00 PM"/>
                                    </div>
                                </div>
                                <div class="row g-3 mt-1">
                                    <div class="col-md-4">
                                        <label class="form-label">Guest Count</label>
                                        <input type="number" name="guest_count" class="form-control ptt-input" min="1" placeholder="# of guests"/>
                                    </div>
                                    <div class="col-md-4">
                                        <label class="form-label">Budget <span class="text-danger">*</span></label>
                                        <input type="text" name="budget" class="form-control ptt-input" required="required" placeholder="$2,000 - $5,000"/>
                                    </div>
                                    <div class="col-md-4">
                                        <label class="form-label">Setting <span class="text-danger">*</span></label>
                                        <select name="indoor_outdoor" class="form-select ptt-input" required="required">
                                            <option value="">Select...</option>
                                            <option value="Indoors">Indoors</option>
                                            <option value="Outdoors">Outdoors</option>
                                            <option value="Both">Both</option>
                                            <option value="Not Sure">Not Sure</option>
                                        </select>
                                    </div>
                                </div>
                            </div>
                            
                            <!-- SECTION: Services -->
                            <div class="ptt-section ptt-services-section">
                                <div class="ptt-section-title">Services of Interest</div>
                                <div class="ptt-services-grid">
                                    <div class="ptt-service-item">
                                        <input type="checkbox" name="services" value="DJ (Music + MC)" id="svc1"/>
                                        <label class="ptt-service-label" for="svc1">DJ (Music + MC)</label>
                                    </div>
                                    <div class="ptt-service-item">
                                        <input type="checkbox" name="services" value="DJ (Music Only)" id="svc2"/>
                                        <label class="ptt-service-label" for="svc2">DJ (Music Only)</label>
                                    </div>
                                    <div class="ptt-service-item">
                                        <input type="checkbox" name="services" value="Live Band" id="svc3"/>
                                        <label class="ptt-service-label" for="svc3">Live Band</label>
                                    </div>
                                    <div class="ptt-service-item">
                                        <input type="checkbox" name="services" value="Photography" id="svc4"/>
                                        <label class="ptt-service-label" for="svc4">Photography</label>
                                    </div>
                                    <div class="ptt-service-item">
                                        <input type="checkbox" name="services" value="Videography" id="svc5"/>
                                        <label class="ptt-service-label" for="svc5">Videography</label>
                                    </div>
                                    <div class="ptt-service-item">
                                        <input type="checkbox" name="services" value="Lighting" id="svc6"/>
                                        <label class="ptt-service-label" for="svc6">Lighting</label>
                                    </div>
                                    <div class="ptt-service-item">
                                        <input type="checkbox" name="services" value="Event Coordination" id="svc7"/>
                                        <label class="ptt-service-label" for="svc7">Coordination</label>
                                    </div>
                                    <div class="ptt-service-item">
                                        <input type="checkbox" name="services" value="Interactive Dancers" id="svc8"/>
                                        <label class="ptt-service-label" for="svc8">Dancers</label>
                                    </div>
                                    <div class="ptt-service-item">
                                        <input type="checkbox" name="services" value="AV Rentals" id="svc9"/>
                                        <label class="ptt-service-label" for="svc9">AV Rentals</label>
                                    </div>
                                    <div class="ptt-service-item">
                                        <input type="checkbox" name="services" value="Karaoke" id="svc10"/>
                                        <label class="ptt-service-label" for="svc10">Karaoke</label>
                                    </div>
                                    <div class="ptt-service-item">
                                        <input type="checkbox" name="services" value="Casino" id="svc11"/>
                                        <label class="ptt-service-label" for="svc11">Casino</label>
                                    </div>
                                    <div class="ptt-service-item">
                                        <input type="checkbox" name="services" value="Other" id="svc12"/>
                                        <label class="ptt-service-label" for="svc12">Other</label>
                                    </div>
                                </div>
                            </div>
                            
                            <!-- SECTION: Message -->
                            <div class="ptt-section">
                                <div class="ptt-section-title">Additional Details</div>
                                <textarea name="special_requests" class="form-control ptt-input" rows="3" placeholder="Tell us more about your event vision, special requests, or any questions..."></textarea>
                            </div>
                            
                            <!-- Submit -->
                            <div class="ptt-submit-wrapper">
                                <button type="submit" class="btn ptt-submit-btn">Get My Quote</button>
                            </div>
                        </form>
                    </div>
                </div>
                
                <script src="/ptt_contact_forms/static/src/js/contact_form.js"></script>
            </body>
        </t>
    </template>
    
    <!-- Thank You Page -->
    <template id="contact_us_thank_you" name="Thank You - Party Time Texas">
        <t t-call="web.html_container">
            <head>
                <meta charset="UTF-8"/>
                <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
                <title>Thank You - Party Time Texas</title>
                <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"/>
                <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@400;500;600;700&amp;display=swap"/>
                <link rel="stylesheet" type="text/css" href="/ptt_contact_forms/static/src/css/contact_form.css"/>
            </head>
            <body class="ptt-embed-body">
                
                <div class="ptt-form-wrapper">
                    <div class="ptt-form-card ptt-thank-you-card">
                        <div class="ptt-success-icon">âœ“</div>
                        <h2>You're All Set!</h2>
                        <p class="lead">Your inquiry has been received.</p>
                        <p>One of our event specialists will reach out within 24 hours to discuss your vision and create a custom proposal.</p>
                        <hr/>
                        <p class="mb-1"><strong>Need to talk now?</strong></p>
                        <a href="tel:+12143408000" class="ptt-phone-link">(214) 340-8000</a>
                        <div class="mt-4">
                            <a href="/contact-us" class="btn ptt-submit-btn">Submit Another Inquiry</a>
                        </div>
                    </div>
                </div>
                
            </body>
        </t>
    </template>
    
</odoo>
