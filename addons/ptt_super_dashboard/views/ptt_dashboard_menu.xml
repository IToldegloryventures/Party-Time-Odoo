              name="Task Calendar (Native Odoo)"
              parent="menu_ptt_native_calendars"
              sequence="2"
              action="action_ptt_native_task_calendar"/>
    
    <!-- 
        NOTE: Native Kanban menus REMOVED
        
        The actions action_ptt_native_event_kanban, action_ptt_native_task_kanban, 
        action_ptt_native_lead_kanban were in ptt_native_kanban_views.xml which was DELETED
        because standalone kanban views can override native Odoo views.
        
        Use the standard Odoo apps (CRM, Project) for native kanban views.
    -->
    
    <menuitem id="menu_ptt_personal_todo"
              name="Personal To-Do"
              parent="menu_ptt_home_root"
              sequence="60"
              action="action_ptt_personal_todo"/>
</odoo>
