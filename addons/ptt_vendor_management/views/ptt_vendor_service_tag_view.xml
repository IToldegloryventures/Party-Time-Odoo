<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- =============================================== -->
    <!-- Vendor Service Tag Views                        -->
    <!-- =============================================== -->

    <!-- Tree View -->
    <record id="view_ptt_vendor_service_tag_tree" model="ir.ui.view">
        <field name="name">ptt.vendor.service.tag.tree</field>
        <field name="model">ptt.vendor.service.tag</field>
        <field name="arch" type="xml">
            <list string="Vendor Service Tags">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="code"/>
                <field name="vendor_count"/>
                <field name="active" widget="boolean_toggle"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_ptt_vendor_service_tag_form" model="ir.ui.view">
        <field name="name">ptt.vendor.service.tag.form</field>
        <field name="model">ptt.vendor.service.tag</field>
        <field name="arch" type="xml">
            <form string="Vendor Service Tag">
                <sheet>
                    <widget name="web_ribbon" title="Archived" bg_color="text-bg-danger" invisible="active"/>
                    <div class="oe_title">
                        <label for="name"/>
                        <h1>
                            <field name="name" placeholder="e.g., DJ Services"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="code" placeholder="e.g., dj"/>
                            <field name="color" widget="color"/>
                        </group>
                        <group>
                            <field name="sequence"/>
                            <field name="active" widget="boolean_toggle"/>
                        </group>
                    </group>
                    <group string="Description">
                        <field name="description" nolabel="1" placeholder="Describe what this service category includes..."/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_ptt_vendor_service_tag_search" model="ir.ui.view">
        <field name="name">ptt.vendor.service.tag.search</field>
        <field name="model">ptt.vendor.service.tag</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="code"/>
                <filter string="Active" name="active" domain="[('active', '=', True)]"/>
                <filter string="Archived" name="archived" domain="[('active', '=', False)]"/>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="action_ptt_vendor_service_tag" model="ir.actions.act_window">
        <field name="name">Service Tags</field>
        <field name="res_model">ptt.vendor.service.tag</field>
        <field name="view_mode">list,form</field>
        <field name="search_view_id" ref="view_ptt_vendor_service_tag_search"/>
        <field name="context">{'search_default_active': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first service tag
            </p>
            <p>
                Service tags categorize the types of services vendors provide (e.g., DJ, Photography, Catering).
                Use these tags to filter and search vendors when assigning them to events.
            </p>
        </field>
    </record>

</odoo>
