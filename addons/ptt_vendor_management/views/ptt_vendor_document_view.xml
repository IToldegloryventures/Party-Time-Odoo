<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!--
        PTT Vendor Document Views
        Purpose: Manage vendor documents (COI, W-9, ACH, etc.) with expiry tracking
    -->

    <!-- Vendor Document Tree View -->
    <record id="view_ptt_vendor_document_tree" model="ir.ui.view">
        <field name="name">ptt.vendor.document.tree</field>
        <field name="model">ptt.vendor.document</field>
        <field name="arch" type="xml">
            <list string="Vendor Documents" 
                  decoration-danger="status == 'non_compliant'"
                  decoration-warning="status == 'expiring_soon'"
                  decoration-success="status == 'compliant'">
                <field name="vendor_id"/>
                <field name="document_type_id"/>
                <field name="document_filename"/>
                <field name="validity"/>
                <field name="status" widget="badge" 
                       decoration-success="status == 'compliant'"
                       decoration-warning="status == 'expiring_soon'"
                       decoration-danger="status == 'non_compliant'"/>
                <field name="upload_date"/>
                <field name="uploaded_by"/>
            </list>
        </field>
    </record>

    <!-- Vendor Document Form View -->
    <record id="view_ptt_vendor_document_form" model="ir.ui.view">
        <field name="name">ptt.vendor.document.form</field>
        <field name="model">ptt.vendor.document</field>
        <field name="arch" type="xml">
            <form string="Vendor Document">
                <sheet>
                    <group>
                        <group string="Document Information">
                            <field name="vendor_id" options="{'no_create': True}" 
                                   domain="[('ptt_is_vendor', '=', True)]"/>
                            <field name="document_type_id" options="{'no_create': True}"/>
                            <field name="validity"/>
                            <field name="status" widget="badge"
                                   decoration-success="status == 'compliant'"
                                   decoration-warning="status == 'expiring_soon'"
                                   decoration-danger="status == 'non_compliant'"/>
                        </group>
                        <group string="File">
                            <field name="attached_document" filename="document_filename"/>
                            <field name="document_filename" invisible="1"/>
                            <field name="upload_date" readonly="1"/>
                            <field name="uploaded_by" readonly="1"/>
                        </group>
                    </group>
                    <group string="Notes">
                        <field name="notes" nolabel="1" placeholder="Additional notes about this document..."/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Vendor Document Search View -->
    <record id="view_ptt_vendor_document_search" model="ir.ui.view">
        <field name="name">ptt.vendor.document.search</field>
        <field name="model">ptt.vendor.document</field>
        <field name="arch" type="xml">
            <search>
                <field name="vendor_id"/>
                <field name="document_type_id"/>
                <filter name="filter_compliant" string="Compliant" domain="[('status', '=', 'compliant')]"/>
                <filter name="filter_expiring" string="Expiring Soon" domain="[('status', '=', 'expiring_soon')]"/>
                <filter name="filter_non_compliant" string="Non-Compliant" domain="[('status', '=', 'non_compliant')]"/>
                <filter name="filter_required" string="Required Documents" 
                        domain="[('document_type_id.required', '=', True)]"/>
            </search>
        </field>
    </record>

    <!-- Vendor Document Action -->
    <record id="action_ptt_vendor_document" model="ir.actions.act_window">
        <field name="name">Vendor Documents</field>
        <field name="res_model">ptt.vendor.document</field>
        <field name="view_mode">list,form</field>
        <field name="context">{'search_default_filter_required': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No vendor documents found
            </p>
            <p>
                Upload documents from vendor contact forms or create new entries here.
            </p>
        </field>
    </record>

    <!-- NOTE: Menu item moved to ptt_vendor_config_menus.xml to avoid dependency on parent menu -->

</odoo>
