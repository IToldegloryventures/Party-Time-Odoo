<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!--
        PTT Res Partner Form View Extension
        
        Adds vendor toggle and vendor-specific tabs.
        When x_is_vendor is toggled on, vendor fields and tabs become visible.
    -->
    <record id="view_partner_form_ptt" model="ir.ui.view">
        <field name="name">res.partner.form.ptt</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            
            <!-- Add Vendor Toggle under Person/Company selector -->
            <xpath expr="//field[@name='company_type']" position="after">
                <span class="ms-4 d-flex align-items-center gap-1">
                    <field name="x_is_vendor" widget="boolean_toggle"/>
                    <label for="x_is_vendor" string="Vendor"/>
                </span>
            </xpath>
            
            <!-- Add Vendor Contact Role field (only for Person contacts under a vendor company) -->
            <xpath expr="//field[@name='function']" position="after">
                <field name="x_vendor_contact_role" 
                       placeholder="e.g., Owner, Talent, Accounting"
                       invisible="not parent_id or company_type == 'company'"/>
            </xpath>
            
            <!-- Add Vendor Info tab (visible when x_is_vendor is toggled on) -->
            <xpath expr="//sheet/notebook" position="inside">
                <page string="Vendor Info" name="ptt_vendor_info" invisible="not x_is_vendor">
                    <group>
                        <group string="Vendor Classification">
                            <field name="x_vendor_tier" widget="radio" options="{'horizontal': true}"/>
                            <field name="x_vendor_service_tag_ids" widget="many2many_tags" 
                                   options="{'color_field': 'color', 'no_create_edit': True}"
                                   placeholder="Select services this vendor provides..."/>
                        </group>
                        <group string="Compliance Status">
                            <field name="x_vendor_compliance_status" widget="badge"
                                   decoration-success="x_vendor_compliance_status == 'compliant'"
                                   decoration-warning="x_vendor_compliance_status == 'expiring_soon'"
                                   decoration-danger="x_vendor_compliance_status in ('missing_required', 'expired')"/>
                            <field name="x_vendor_rating" widget="priority"/>
                        </group>
                    </group>
                </page>
                
                <!-- Vendor Notes Tab (visible when x_is_vendor is toggled on) -->
                <page string="Vendor Notes" name="ptt_vendor_notes" invisible="not x_is_vendor">
                    <group>
                        <field name="x_vendor_notes" widget="text" nolabel="1" 
                               placeholder="Add internal notes about this vendor...&#10;&#10;Examples:&#10;- Preferred contact method&#10;- Special pricing arrangements&#10;- Performance history&#10;- Preferred event types&#10;- Any special requirements or considerations"/>
                    </group>
                </page>
                
                <!-- Vendor Documents Tab (visible when x_is_vendor is toggled on) -->
                <page string="Documents" name="ptt_vendor_documents" invisible="not x_is_vendor">
                    <field name="x_vendor_document_ids" context="{'default_vendor_id': id}">
                        <list editable="bottom"
                              decoration-danger="status == 'expired'"
                              decoration-warning="status == 'expiring_soon'"
                              decoration-success="status == 'valid'">
                            <field name="document_type_id" options="{'no_create': True}"/>
                            <field name="validity"/>
                            <field name="document_filename" column_invisible="1"/>
                            <field name="attached_document" filename="document_filename"/>
                            <field name="status" widget="badge"
                                   decoration-success="status == 'valid'"
                                   decoration-warning="status == 'expiring_soon'"
                                   decoration-danger="status == 'expired'"
                                   decoration-muted="status == 'not_applicable'"/>
                            <field name="upload_date" readonly="1" optional="hide"/>
                            <field name="notes" optional="hide"/>
                        </list>
                    </field>
                </page>
            </xpath>
        </field>
    </record>
</odoo>
