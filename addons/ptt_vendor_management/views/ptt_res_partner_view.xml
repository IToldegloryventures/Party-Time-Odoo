<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!--
        PTT Res Partner Form View Extension
        
        NOTE: Use standard Odoo fields:
        - supplier_rank > 0 = Is a Vendor (standard)
        - comment = Internal Notes (standard - use instead of x_vendor_notes)
        
        To mark a contact as a vendor, use the standard "Purchase" tab 
        or set supplier_rank > 0 programmatically.
    -->
    <record id="view_partner_form_ptt" model="ir.ui.view">
        <field name="name">res.partner.form.ptt</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <!-- NOTE: Documents smart button removed - documents accessible via Documents tab below -->
            
            <!-- Add Vendor Contact Role field (visible for contacts linked to vendor companies) -->
            <xpath expr="//field[@name='function']" position="after">
                <field name="x_vendor_contact_role" 
                       placeholder="e.g., Owner, Talent, Accounting"/>
            </xpath>
            
            <!-- Add Vendor Info tab (visible when supplier_rank > 0, i.e. is a vendor) -->
            <xpath expr="//sheet/notebook" position="inside">
                <page string="PTT Vendor Info" invisible="supplier_rank == 0">
                    <group>
                        <group string="Vendor Classification">
                            <field name="x_vendor_tier" widget="radio" options="{'horizontal': true}"/>
                            <field name="x_vendor_service_tag_ids" widget="many2many_tags" 
                                   options="{'color_field': 'color', 'no_create_edit': True}"
                                   placeholder="Select services this vendor provides..."/>
                        </group>
                        <group string="Compliance Status">
                            <field name="x_vendor_compliance_status" widget="badge"
                                   decoration-success="x_vendor_compliance_status == 'compliant'"
                                   decoration-warning="x_vendor_compliance_status == 'expiring_soon'"
                                   decoration-danger="x_vendor_compliance_status in ('missing_required', 'expired')"/>
                            <field name="x_vendor_rating" widget="priority"/>
                        </group>
                    </group>
                    <separator string="Internal Notes"/>
                    <field name="comment" widget="text" nolabel="1" 
                           placeholder="Internal notes about this vendor..."/>
                </page>
                
                <!-- Vendor Documents Tab -->
                <page string="Documents" invisible="supplier_rank == 0">
                    <field name="x_vendor_document_ids" context="{'default_vendor_id': id}">
                        <list editable="bottom"
                              decoration-danger="status == 'expired'"
                              decoration-warning="status == 'expiring_soon'"
                              decoration-success="status == 'valid'">
                            <field name="document_type_id" options="{'no_create': True}"/>
                            <field name="validity"/>
                            <field name="document_filename" column_invisible="1"/>
                            <field name="attached_document" filename="document_filename"/>
                            <field name="status" widget="badge"
                                   decoration-success="status == 'valid'"
                                   decoration-warning="status == 'expiring_soon'"
                                   decoration-danger="status == 'expired'"
                                   decoration-muted="status == 'not_applicable'"/>
                            <field name="upload_date" readonly="1" optional="hide"/>
                            <field name="notes" optional="hide"/>
                        </list>
                    </field>
                </page>
            </xpath>
        </field>
    </record>
</odoo>
