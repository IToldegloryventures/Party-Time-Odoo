<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!--
        PTT Vendor List View - SAFE VERSION
        
        IMPORTANT: This file only contains:
        1. Search view (safe - search views don't override native views)
        2. Action with vendor domain filter
        
        The standalone kanban and list views were REMOVED because:
        - Views without inherit_id can override native Odoo views
        - Even with action binding, they can leak into other contexts
        - The correct pattern is to use inherit_id to extend native views
        
        The action now uses native res.partner views with a vendor filter.
    -->

    <!-- Vendor Search View - SAFE (search views don't override native views) -->
    <record id="view_ptt_vendor_search" model="ir.ui.view">
        <field name="name">res.partner.vendor.search.ptt</field>
        <field name="model">res.partner</field>
        <field name="arch" type="xml">
            <search>
                <field name="name" string="Vendor" 
                       filter_domain="['|', '|', ('name', 'ilike', self), ('email', 'ilike', self), ('phone', 'ilike', self)]"/>
                <field name="ptt_vendor_service_tag_ids" string="Service"/>
                <field name="phone"/>
                <field name="email"/>
                <field name="city" string="City"/>
                <field name="state_id" string="State"/>
                <separator/>
                <filter string="Compliant" name="compliant" domain="[('ptt_vendor_compliance_status', '=', 'compliant')]"/>
                <filter string="Missing Documents" name="missing_docs" domain="[('ptt_vendor_compliance_status', '=', 'missing_required')]"/>
                <filter string="Expired Documents" name="expired_docs" domain="[('ptt_vendor_compliance_status', '=', 'expired')]"/>
                <filter string="Expiring Soon" name="expiring_soon" domain="[('ptt_vendor_compliance_status', '=', 'expiring_soon')]"/>
                <separator/>
                <filter string="Premier Tier" name="tier_premier" domain="[('ptt_vendor_tier', '=', 'premier')]"/>
                <filter string="Classic Tier" name="tier_classic" domain="[('ptt_vendor_tier', '=', 'classic')]"/>
                <filter string="Essentials Tier" name="tier_essentials" domain="[('ptt_vendor_tier', '=', 'essentials')]"/>
                <filter string="No Tier Set" name="tier_none" domain="[('ptt_vendor_tier', '=', False)]"/>
                <separator/>
                <filter string="4-5 Stars" name="rating_high" domain="[('ptt_vendor_rating', 'in', ['4', '5'])]"/>
                <filter string="3 Stars" name="rating_medium" domain="[('ptt_vendor_rating', '=', '3')]"/>
                <filter string="1-2 Stars" name="rating_low" domain="[('ptt_vendor_rating', 'in', ['1', '2'])]"/>
                <separator/>
                <group expand="0" string="Group By">
                    <filter string="Tier" name="group_tier" context="{'group_by': 'ptt_vendor_tier'}"/>
                    <filter string="Compliance" name="group_compliance" context="{'group_by': 'ptt_vendor_compliance_status'}"/>
                    <filter string="Rating" name="group_rating" context="{'group_by': 'ptt_vendor_rating'}"/>
                    <filter string="State" name="group_state" context="{'group_by': 'state_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Vendor List Action - Uses native res.partner views with vendor filter -->
    <record id="action_ptt_vendor_list" model="ir.actions.act_window">
        <field name="name">Vendors</field>
        <field name="res_model">res.partner</field>
        <field name="view_mode">list,kanban,form</field>
        <field name="domain">[('supplier_rank', '>', 0), ('is_company', '=', True)]</field>
        <field name="context">{
            'default_supplier_rank': 1,
            'default_is_company': True
        }</field>
        <field name="search_view_id" ref="view_ptt_vendor_search"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No vendors found
            </p>
            <p>
                Create a new vendor or adjust your search filters.
            </p>
        </field>
    </record>

    <!-- 
        NOTE: Custom list/kanban views REMOVED
        
        The action now uses native res.partner views.
        To add custom fields to the vendor list, use inherit_id:
        
        <record id="view_partner_tree_inherit_vendor" model="ir.ui.view">
            <field name="name">res.partner.tree.inherit.vendor</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='email']" position="after">
                    <field name="ptt_vendor_tier" optional="show"/>
                </xpath>
            </field>
        </record>
    -->

</odoo>
