<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!--
        PTT Vendor List View
        Purpose: Easy-to-use vendor list for sales team to search and filter vendors
    -->

    <!-- Vendor List/Tree View -->
    <record id="view_ptt_vendor_tree" model="ir.ui.view">
        <field name="name">res.partner.vendor.tree.ptt</field>
        <field name="model">res.partner</field>
        <field name="priority">99</field>
        <field name="arch" type="xml">
            <list string="Vendors" 
                  decoration-success="x_vendor_compliance_status == 'compliant'"
                  decoration-warning="x_vendor_compliance_status == 'expiring_soon'"
                  decoration-danger="x_vendor_compliance_status in ('missing_required', 'expired')">
                <field name="name" string="Vendor Name"/>
                <field name="x_vendor_tier" widget="badge"
                       decoration-warning="x_vendor_tier == 'gold'"
                       decoration-info="x_vendor_tier == 'silver'"
                       decoration-muted="x_vendor_tier == 'bronze'"/>
                <field name="x_vendor_service_tag_ids" widget="many2many_tags" 
                       options="{'color_field': 'color'}"/>
                <field name="city"/>
                <field name="state_id"/>
                <field name="phone"/>
                <field name="email"/>
                <field name="x_vendor_compliance_status" widget="badge"
                       decoration-success="x_vendor_compliance_status == 'compliant'"
                       decoration-warning="x_vendor_compliance_status == 'expiring_soon'"
                       decoration-danger="x_vendor_compliance_status in ('missing_required', 'expired')"
                       optional="show"/>
                <field name="x_vendor_document_count" string="Docs" optional="hide"/>
            </list>
        </field>
    </record>

    <!-- Vendor Kanban View -->
    <record id="view_ptt_vendor_kanban" model="ir.ui.view">
        <field name="name">res.partner.vendor.kanban.ptt</field>
        <field name="model">res.partner</field>
        <field name="priority">99</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile">
                <field name="name"/>
                <field name="x_vendor_tier"/>
                <field name="x_vendor_service_tag_ids"/>
                <field name="x_vendor_compliance_status"/>
                <field name="city"/>
                <field name="state_id"/>
                <field name="phone"/>
                <field name="email"/>
                <field name="image_128"/>
                <templates>
                    <t t-name="card">
                        <aside>
                            <img class="rounded" t-att-src="kanban_image('res.partner', 'image_128', record.id.raw_value)" alt="Vendor"/>
                        </aside>
                        <main>
                            <div class="d-flex align-items-center gap-1">
                                <field name="name" class="fw-bold fs-5 text-truncate"/>
                                <field name="x_vendor_tier" widget="badge"
                                       decoration-warning="x_vendor_tier == 'gold'"
                                       decoration-info="x_vendor_tier == 'silver'"
                                       decoration-muted="x_vendor_tier == 'bronze'"/>
                            </div>
                            <field name="x_vendor_service_tag_ids" widget="many2many_tags" 
                                   options="{'color_field': 'color'}"/>
                            <div class="text-muted small">
                                <t t-if="record.city.value"><t t-esc="record.city.value"/>, </t>
                                <field name="state_id"/>
                            </div>
                            <div class="d-flex gap-2 mt-1">
                                <span t-if="record.phone.value" class="text-muted small">
                                    <i class="fa fa-phone"/> <t t-esc="record.phone.value"/>
                                </span>
                            </div>
                            <field name="x_vendor_compliance_status" widget="badge"
                                   decoration-success="x_vendor_compliance_status == 'compliant'"
                                   decoration-warning="x_vendor_compliance_status == 'expiring_soon'"
                                   decoration-danger="x_vendor_compliance_status in ('missing_required', 'expired')"/>
                        </main>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Vendor Search View -->
    <record id="view_ptt_vendor_search" model="ir.ui.view">
        <field name="name">res.partner.vendor.search.ptt</field>
        <field name="model">res.partner</field>
        <field name="priority">99</field>
        <field name="arch" type="xml">
            <search>
                <field name="name" string="Vendor" 
                       filter_domain="['|', '|', ('name', 'ilike', self), ('email', 'ilike', self), ('phone', 'ilike', self)]"/>
                <field name="x_vendor_service_tag_ids" string="Service"/>
                <field name="city"/>
                <field name="state_id"/>
                <filter string="Gold Tier" name="tier_gold" domain="[('x_vendor_tier', '=', 'gold')]"/>
                <filter string="Silver Tier" name="tier_silver" domain="[('x_vendor_tier', '=', 'silver')]"/>
                <filter string="Bronze Tier" name="tier_bronze" domain="[('x_vendor_tier', '=', 'bronze')]"/>
                <filter string="No Tier Set" name="tier_none" domain="[('x_vendor_tier', '=', False)]"/>
                <filter string="Compliant" name="compliant" domain="[('x_vendor_compliance_status', '=', 'compliant')]"/>
                <filter string="Expiring Soon" name="expiring" domain="[('x_vendor_compliance_status', '=', 'expiring_soon')]"/>
                <filter string="Expired Docs" name="expired" domain="[('x_vendor_compliance_status', '=', 'expired')]"/>
                <filter string="Missing Docs" name="missing" domain="[('x_vendor_compliance_status', '=', 'missing_required')]"/>
            </search>
        </field>
    </record>

    <!-- Vendor List Action -->
    <record id="action_ptt_vendor_list" model="ir.actions.act_window">
        <field name="name">Vendors</field>
        <field name="res_model">res.partner</field>
        <field name="view_mode">list,kanban,form</field>
        <field name="domain">[('supplier_rank', '>', 0), ('is_company', '=', True)]</field>
        <field name="context">{
            'default_supplier_rank': 1,
            'default_is_company': True,
            'search_default_compliant': 0
        }</field>
        <field name="search_view_id" ref="view_ptt_vendor_search"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No vendors found
            </p>
            <p>
                Create a new vendor or adjust your search filters.
            </p>
        </field>
    </record>

    <!-- Bind custom views to the action -->
    <record id="action_ptt_vendor_list_tree" model="ir.actions.act_window.view">
        <field name="sequence">1</field>
        <field name="view_mode">list</field>
        <field name="view_id" ref="view_ptt_vendor_tree"/>
        <field name="act_window_id" ref="action_ptt_vendor_list"/>
    </record>

    <record id="action_ptt_vendor_list_kanban" model="ir.actions.act_window.view">
        <field name="sequence">2</field>
        <field name="view_mode">kanban</field>
        <field name="view_id" ref="view_ptt_vendor_kanban"/>
        <field name="act_window_id" ref="action_ptt_vendor_list"/>
    </record>

    <!-- Menu item is in ptt_vendor_menus.xml -->

</odoo>
