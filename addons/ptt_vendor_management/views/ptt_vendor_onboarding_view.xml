<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!--
        PTT Vendor Onboarding Views
        
        SEPARATE from main Vendor List - this is for NEW vendor applications
        going through the hiring/approval workflow:
        
        new → pending_review → active (or inactive)
        
        Once approved, vendors appear in the main Vendors list.
    -->

    <!-- Vendor Onboarding List View -->
    <record id="view_ptt_vendor_onboarding_tree" model="ir.ui.view">
        <field name="name">res.partner.vendor.onboarding.tree.ptt</field>
        <field name="model">res.partner</field>
        <field name="priority">99</field>
        <field name="arch" type="xml">
            <list string="Vendor Applications" 
                  decoration-info="ptt_vendor_status == 'new'"
                  decoration-warning="ptt_vendor_status == 'pending_review'"
                  decoration-success="ptt_vendor_status == 'active'"
                  decoration-muted="ptt_vendor_status == 'inactive'">
                <field name="name" string="Company Name"/>
                <field name="ptt_vendor_principal_name" string="Principal"/>
                <field name="email"/>
                <field name="phone"/>
                <field name="ptt_vendor_service_types" widget="many2many_tags"
                       string="Services"/>
                <field name="ptt_vendor_status" widget="badge"
                       decoration-info="ptt_vendor_status == 'new'"
                       decoration-warning="ptt_vendor_status == 'pending_review'"
                       decoration-success="ptt_vendor_status == 'active'"
                       decoration-danger="ptt_vendor_status == 'inactive'"/>
                <field name="ptt_vendor_compliance_status" widget="badge" string="Docs"
                       decoration-success="ptt_vendor_compliance_status == 'compliant'"
                       decoration-danger="ptt_vendor_compliance_status in ('missing_required', 'expired')"/>
                <field name="ptt_portal_user_id" string="Portal User"/>
                <field name="create_date" string="Applied"/>
            </list>
        </field>
    </record>

    <!-- Vendor Onboarding Form View -->
    <record id="view_ptt_vendor_onboarding_form" model="ir.ui.view">
        <field name="name">res.partner.vendor.onboarding.form.ptt</field>
        <field name="model">res.partner</field>
        <field name="priority">99</field>
        <field name="arch" type="xml">
            <form string="Vendor Application">
                <header>
                    <!-- Workflow Buttons -->
                    <button name="action_approve_vendor" string="Approve" type="object"
                            class="oe_highlight"
                            invisible="ptt_vendor_status not in ('pending_review', 'new')"/>
                    <button name="action_request_info" string="Request Info" type="object"
                            invisible="ptt_vendor_status not in ('pending_review', 'new')"/>
                    <button name="action_deactivate_vendor" string="Deactivate" type="object"
                            invisible="ptt_vendor_status != 'active'"/>
                    <button name="action_reactivate_vendor" string="Reactivate" type="object"
                            invisible="ptt_vendor_status != 'inactive'"/>
                    <button name="action_grant_portal_access" string="Grant Portal Access" type="object"
                            invisible="ptt_portal_user_id != False"/>
                    
                    <!-- Status Bar -->
                    <field name="ptt_vendor_status" widget="statusbar"
                           statusbar_visible="new,pending_review,active"/>
                </header>
                
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_vendor_documents" type="object"
                                class="oe_stat_button" icon="fa-file-text-o"
                                invisible="ptt_vendor_document_count == 0">
                            <div class="o_stat_info">
                                <span class="o_stat_value"><field name="ptt_vendor_document_count"/></span>
                                <span class="o_stat_text">Documents</span>
                            </div>
                        </button>
                    </div>
                    
                    <widget name="web_ribbon" title="Pending Review" bg_color="text-bg-warning"
                            invisible="ptt_vendor_status != 'pending_review'"/>
                    <widget name="web_ribbon" title="New Application" bg_color="text-bg-info"
                            invisible="ptt_vendor_status != 'new'"/>
                    <widget name="web_ribbon" title="Inactive" bg_color="text-bg-secondary"
                            invisible="ptt_vendor_status != 'inactive'"/>
                    
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Company Name" required="1"/>
                        </h1>
                    </div>
                    
                    <group>
                        <group string="Company Information">
                            <field name="supplier_rank" invisible="1"/>
                            <field name="ptt_vendor_principal_name" placeholder="Owner/Principal Name"/>
                            <label for="street" string="Address"/>
                            <div class="o_address_format">
                                <field name="street" placeholder="Street..."/>
                                <field name="street2" placeholder="Street 2..."/>
                                <field name="city" placeholder="City"/>
                                <field name="state_id" placeholder="State" 
                                       options="{'no_open': True, 'no_quick_create': True}"/>
                                <field name="zip" placeholder="ZIP"/>
                                <field name="country_id" placeholder="Country" 
                                       options="{'no_open': True, 'no_create': True}"/>
                            </div>
                            <field name="email" widget="email"/>
                            <field name="phone" widget="phone"/>
                            <field name="ptt_vendor_additional_phone" widget="phone"/>
                            <field name="website" widget="url"/>
                        </group>
                        <group string="Classification">
                            <field name="ptt_vendor_tier" widget="radio" options="{'horizontal': true}"/>
                            <field name="ptt_vendor_zip_radius" widget="float"/>
                            <field name="ptt_portal_user_id" options="{'no_create': True}"/>
                            <field name="ptt_vendor_compliance_status" widget="badge"
                                   decoration-success="ptt_vendor_compliance_status == 'compliant'"
                                   decoration-warning="ptt_vendor_compliance_status == 'expiring_soon'"
                                   decoration-danger="ptt_vendor_compliance_status in ('missing_required', 'expired')"/>
                        </group>
                    </group>
                    
                    <notebook>
                        <!-- Services & Pricing Tab -->
                        <page string="Services &amp; Pricing" name="services">
                            <field name="ptt_vendor_service_pricing_ids" nolabel="1">
                                <list editable="bottom">
                                    <field name="service_type_id" required="1"/>
                                    <field name="price_detail" placeholder="e.g., $150/hr, $500 flat"/>
                                    <field name="notes" optional="show"/>
                                </list>
                            </field>
                            <group class="mt-3">
                                <group string="All Services">
                                    <field name="ptt_vendor_service_types" widget="many2many_tags" nolabel="1"/>
                                </group>
                            </group>
                        </page>
                        
                        <!-- Contacts Tab -->
                        <page string="Contacts" name="contacts">
                            <field name="ptt_vendor_contact_ids" nolabel="1"
                                   context="{'default_ptt_is_vendor_contact': True, 'default_parent_id': id}">
                                <list editable="bottom">
                                    <field name="name" required="1"/>
                                    <field name="ptt_vendor_contact_role" string="Role"/>
                                    <field name="email" widget="email"/>
                                    <field name="phone" widget="phone"/>
                                </list>
                            </field>
                        </page>
                        
                        <!-- Documents Tab -->
                        <page string="Documents" name="documents">
                            <div class="mb-3">
                                <button name="action_populate_document_lines" type="object"
                                        string="⟳ Populate Required Document Lines" 
                                        class="btn btn-secondary"
                                        invisible="ptt_vendor_document_count > 0"/>
                            </div>
                            <field name="ptt_vendor_document_ids" nolabel="1"
                                   context="{'default_vendor_id': id}">
                                <list editable="bottom"
                                      decoration-danger="status == 'non_compliant'"
                                      decoration-warning="status == 'expiring_soon'"
                                      decoration-success="status == 'compliant'">
                                    <field name="document_type_id" options="{'no_create': True}"/>
                                    <field name="contact_id" string="Contact" 
                                           domain="[('parent_id', '=', parent.id)]"
                                           optional="show"/>
                                    <field name="validity"/>
                                    <field name="document_filename" column_invisible="1"/>
                                    <field name="attached_document" filename="document_filename"/>
                                    <field name="status" widget="badge"
                                           decoration-success="status == 'compliant'"
                                           decoration-warning="status == 'expiring_soon'"
                                           decoration-danger="status == 'non_compliant'"/>
                                </list>
                            </field>
                        </page>
                        
                        <!-- Notes Tab -->
                        <page string="Notes" name="notes">
                            <field name="ptt_vendor_notes" nolabel="1" 
                                   placeholder="Internal notes about this vendor application..."/>
                        </page>
                    </notebook>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <!-- Vendor Onboarding Kanban View -->
    <record id="view_ptt_vendor_onboarding_kanban" model="ir.ui.view">
        <field name="name">res.partner.vendor.onboarding.kanban.ptt</field>
        <field name="model">res.partner</field>
        <field name="priority">99</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile" default_group_by="ptt_vendor_status">
                <field name="name"/>
                <field name="ptt_vendor_status"/>
                <field name="ptt_vendor_service_types"/>
                <field name="ptt_vendor_compliance_status"/>
                <field name="email"/>
                <field name="phone"/>
                <field name="image_128"/>
                <templates>
                    <t t-name="card">
                        <aside>
                            <img class="rounded" t-att-src="kanban_image('res.partner', 'image_128', record.id.raw_value)" alt="Vendor"/>
                        </aside>
                        <main>
                            <div class="d-flex align-items-center gap-1">
                                <field name="name" class="fw-bold fs-5 text-truncate"/>
                            </div>
                            <field name="ptt_vendor_service_types" widget="many2many_tags"/>
                            <div class="d-flex gap-2 mt-1">
                                <field name="ptt_vendor_compliance_status" widget="badge"
                                       decoration-success="ptt_vendor_compliance_status == 'compliant'"
                                       decoration-danger="ptt_vendor_compliance_status in ('missing_required', 'expired')"/>
                            </div>
                            <div class="d-flex gap-2 mt-1">
                                <span t-if="record.email.value" class="text-muted small">
                                    <i class="fa fa-envelope"/> <t t-esc="record.email.value"/>
                                </span>
                            </div>
                        </main>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Vendor Onboarding Search View -->
    <record id="view_ptt_vendor_onboarding_search" model="ir.ui.view">
        <field name="name">res.partner.vendor.onboarding.search.ptt</field>
        <field name="model">res.partner</field>
        <field name="priority">99</field>
        <field name="arch" type="xml">
            <search>
                <field name="name" string="Company" 
                       filter_domain="['|', '|', ('name', 'ilike', self), ('email', 'ilike', self), ('phone', 'ilike', self)]"/>
                <field name="ptt_vendor_service_types" string="Service"/>
                <separator/>
                <filter string="New" name="status_new" domain="[('ptt_vendor_status', '=', 'new')]"/>
                <filter string="Pending Review" name="status_pending" domain="[('ptt_vendor_status', '=', 'pending_review')]"/>
                <filter string="Active" name="status_active" domain="[('ptt_vendor_status', '=', 'active')]"/>
                <filter string="Inactive" name="status_inactive" domain="[('ptt_vendor_status', '=', 'inactive')]"/>
                <separator/>
                <filter string="Missing Documents" name="missing_docs" domain="[('ptt_vendor_compliance_status', '=', 'missing_required')]"/>
                <filter string="Compliant" name="compliant" domain="[('ptt_vendor_compliance_status', '=', 'compliant')]"/>
                <separator/>
                <filter string="Group By Status" name="group_status" context="{'group_by': 'ptt_vendor_status'}"/>
                <filter string="Group By Compliance" name="group_compliance" context="{'group_by': 'ptt_vendor_compliance_status'}"/>
                <filter string="Group By Tier" name="group_tier" context="{'group_by': 'ptt_vendor_tier'}"/>
            </search>
        </field>
    </record>

    <!-- Vendor Onboarding Action (ALL vendors in workflow) -->
    <record id="action_ptt_vendor_onboarding" model="ir.actions.act_window">
        <field name="name">Vendor Onboarding</field>
        <field name="res_model">res.partner</field>
        <field name="view_mode">kanban,list,form</field>
        <field name="domain">[('supplier_rank', '>', 0)]</field>
        <field name="context">{
            'default_supplier_rank': 1,
            'default_is_company': True,
            'default_ptt_vendor_status': 'new',
            'search_default_status_new': 1,
            'search_default_status_pending': 1
        }</field>
        <field name="search_view_id" ref="view_ptt_vendor_onboarding_search"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No vendor applications
            </p>
            <p>
                New vendor applications will appear here for review.
            </p>
        </field>
    </record>

    <!-- Bind custom views to the onboarding action -->
    <record id="action_ptt_vendor_onboarding_kanban" model="ir.actions.act_window.view">
        <field name="sequence">1</field>
        <field name="view_mode">kanban</field>
        <field name="view_id" ref="view_ptt_vendor_onboarding_kanban"/>
        <field name="act_window_id" ref="action_ptt_vendor_onboarding"/>
    </record>

    <record id="action_ptt_vendor_onboarding_tree" model="ir.actions.act_window.view">
        <field name="sequence">2</field>
        <field name="view_mode">list</field>
        <field name="view_id" ref="view_ptt_vendor_onboarding_tree"/>
        <field name="act_window_id" ref="action_ptt_vendor_onboarding"/>
    </record>

    <record id="action_ptt_vendor_onboarding_form" model="ir.actions.act_window.view">
        <field name="sequence">3</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_ptt_vendor_onboarding_form"/>
        <field name="act_window_id" ref="action_ptt_vendor_onboarding"/>
    </record>

</odoo>
