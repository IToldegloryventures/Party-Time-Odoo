<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Reminder Email Template for Pending Work Orders -->
        <record id="email_template_vendor_work_order_reminder" model="mail.template">
            <field name="name">Vendor Work Order Reminder</field>
            <field name="model_id" ref="ptt_business_core.model_ptt_project_vendor_assignment"/>
            <field name="email_from">{{ (object.project_id.company_id.email or user.email_formatted) }}</field>
            <field name="email_to">{{ object.vendor_id.email }}</field>
            <field name="subject">Reminder: Please Respond to Work Order - {{ object.project_id.name }}</field>
            <field name="body_html"><![CDATA[
<div style="font-family: Arial, sans-serif; max-width: 600px; margin: 0 auto; padding: 20px;">
    <div style="background-color: #875A7B; color: white; padding: 16px; border-radius: 8px 8px 0 0;">
        <h3 style="margin: 0;">Work Order Reminder</h3>
    </div>
    <div style="background-color: #f9f9f9; padding: 20px; border: 1px solid #ddd; border-top: none;">
        <p style="font-size: 15px;">
            Hi <strong>{{ object.vendor_id.name }}</strong>, this is a friendly reminder to respond to your
            work order for <strong>{{ object.project_id.name }}</strong>.
        </p>
        <p style="margin: 20px 0; text-align: center;">
            <a href="{{ object.get_base_url() }}/my/work-orders/{{ object.id }}/{{ object.access_token }}"
               style="background-color: #875A7B; color: white; padding: 12px 30px;
                      text-decoration: none; border-radius: 5px; font-weight: bold; display: inline-block;">
                View &amp; Respond
            </a>
        </p>
        <p style="font-size: 13px; color: #666;">
            If you have any questions, reply to this email or contact us directly.
        </p>
    </div>
</div>
            ]]></field>
            <field name="auto_delete" eval="True"/>
        </record>
    </data>
</odoo>
