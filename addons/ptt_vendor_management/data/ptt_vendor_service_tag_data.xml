<?xml version="1.0" encoding="utf-8"?>
<odoo noupdate="1">
    <!--
        PTT Vendor Service Tags - Seed Data
        
        These service tags categorize what services vendors provide.
        Used for filtering vendors when assigning to events.
        
        Colors: 1=red, 2=orange, 3=yellow, 4=green, 5=aqua, 6=blue, 
                7=purple, 8=pink, 9=gray, 10=olive, 11=teal
    -->

    <record id="service_tag_dj" model="ptt.vendor.service.tag">
        <field name="name">DJ &amp; MC Services</field>
        <field name="code">dj</field>
        <field name="sequence">10</field>
        <field name="color">6</field>
        <field name="description">Disc jockey and master of ceremonies services for events.</field>
    </record>

