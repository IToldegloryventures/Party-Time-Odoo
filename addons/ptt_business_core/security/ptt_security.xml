<?xml version="1.0" encoding="utf-8"?>
<odoo noupdate="0">
    <!--
        PTT Security Groups
        Per Odoo 19 docs: https://www.odoo.com/documentation/19.0/developer/tutorials/restrict_data_access.html
    -->

    <!-- Quote Approver Group - Can approve quotes before sending to clients -->
    <record id="group_quote_approver" model="res.groups">
        <field name="name">PTT Quote Approver</field>
        <field name="comment">Users in this group can approve sales quotes before they are sent to clients. Typically assigned to sales managers or owners.</field>
    </record>

    <!--
        Vendor Assignment Record Rules
        Following Odoo 19 portal access pattern from official tutorials.
        Two rules are required:
        1. Portal users can only see their own assignments (filtered by vendor_id)
        2. Internal users can see all assignments
    -->

    <!-- Rule 1: Portal Vendor Access - Vendors see only their own assignments -->
    <record id="rule_vendor_assignment_portal" model="ir.rule">
        <field name="name">Vendor Assignment: Portal Vendor Access</field>
        <field name="model_id" ref="model_ptt_project_vendor_assignment"/>
        <field name="domain_force">[('vendor_id', '=', user.partner_id.id)]</field>
        <field name="groups" eval="[(4, ref('base.group_portal'))]"/>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="True"/>
        <field name="perm_create" eval="False"/>
        <field name="perm_unlink" eval="False"/>
    </record>

    <!-- Rule 2: Internal User Access - Staff see all vendor assignments -->
    <record id="rule_vendor_assignment_internal" model="ir.rule">
        <field name="name">Vendor Assignment: Internal User Full Access</field>
        <field name="model_id" ref="model_ptt_project_vendor_assignment"/>
        <field name="domain_force">[(1, '=', 1)]</field>
        <field name="groups" eval="[(4, ref('base.group_user'))]"/>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="True"/>
        <field name="perm_create" eval="True"/>
        <field name="perm_unlink" eval="True"/>
    </record>

</odoo>
