<?xml version="1.0" encoding="utf-8"?>
<odoo noupdate="1">
    <!--
    PTT CRM Pipeline Stages
    =======================
    Complete stage configuration for Party Time Texas event sales pipeline.
    
    Pipeline Flow:
    1. Intake (New leads)
    2. Qualification (Qualified leads)  
    3. Approval (Internal approval needed)
    4. Proposal Sent (Quote sent to customer)
    5. Contract Sent (Contract awaiting signature)
    6. Booked (Won - event confirmed)
    7. Lost (Opportunity lost)
    
    STRATEGY: We override Odoo's default stages by using their XML IDs
    (crm.stage_lead1, crm.stage_lead2, etc.) and update the names/sequences.
    Then we add our custom stages.
    -->

    <!-- ================================================================
         OVERRIDE DEFAULT ODOO STAGES
         These use Odoo's existing XML IDs to rename them in-place
         ================================================================ -->
    
    <!-- Stage 1: Intake (was "New") -->
    <record model="crm.stage" id="crm.stage_lead1">
        <field name="name">Intake</field>
        <field name="sequence">10</field>
        <field name="color">11</field>
        <field name="is_won">False</field>
        <field name="requirements">New inquiry received. Gather initial event details.</field>
    </record>

    <!-- Stage 2: Qualification (was "Qualified") -->
    <record model="crm.stage" id="crm.stage_lead2">
        <field name="name">Qualification</field>
        <field name="sequence">20</field>
        <field name="color">5</field>
        <field name="is_won">False</field>
        <field name="requirements">Lead is qualified. Event date, budget, and requirements confirmed.</field>
    </record>

    <!-- Stage 3: Approval (was "Proposition" - repurposed) -->
    <record model="crm.stage" id="crm.stage_lead3">
        <field name="name">Approval</field>
        <field name="sequence">30</field>
        <field name="color">8</field>
        <field name="is_won">False</field>
        <field name="requirements">Internal approval required before sending proposal.</field>
    </record>

    <!-- ================================================================
         PTT CUSTOM STAGES
         These are new stages specific to Party Time Texas workflow
         ================================================================ -->

    <!-- Stage 4: Proposal Sent -->
    <record model="crm.stage" id="stage_ptt_proposal_sent">
        <field name="name">Proposal Sent</field>
        <field name="sequence">40</field>
        <field name="color">4</field>
        <field name="is_won">False</field>
        <field name="requirements">Quotation has been sent to customer. Awaiting response.</field>
    </record>

    <!-- Stage 5: Contract Sent -->
    <record model="crm.stage" id="stage_ptt_contract_sent">
        <field name="name">Contract Sent</field>
        <field name="sequence">50</field>
        <field name="color">6</field>
        <field name="is_won">False</field>
        <field name="requirements">Contract sent for signature. Awaiting signed contract and deposit.</field>
    </record>

    <!-- Stage 6: Booked (Won) - Override Odoo's Won stage -->
    <record model="crm.stage" id="crm.stage_lead4">
        <field name="name">Booked</field>
        <field name="sequence">60</field>
        <field name="is_won">True</field>
        <field name="fold">False</field>
        <field name="color">10</field>
        <field name="requirements">Event confirmed and booked. Project should be created.</field>
    </record>

    <!-- Stage 7: Lost -->
    <record model="crm.stage" id="stage_ptt_lost">
        <field name="name">Lost</field>
        <field name="sequence">100</field>
        <field name="fold">True</field>
        <field name="color">1</field>
        <field name="is_won">False</field>
        <field name="requirements">Opportunity lost. Record reason for analytics.</field>
    </record>

</odoo>
