<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- 
        Entertainment Products & Services
        
        DJ PRICING MODEL (from spreadsheet):
        - list_price = BASE hourly rate ($300 = Social Essential MIN)
        - Variant pricing via product.template.attribute.value price_extra
        - UoM = Hours
        
        Price Extras (added to base $300):
        - Event Type: Social=0, Corporate=0, Wedding=+$50
        - Service Tier: Essentials=0, Classic=+$125, Premier=+$300
        
        Example: Wedding Premier = $300 + $50 + $300 = $650/hr
    -->
    <data noupdate="0">
        <!-- ============================================ -->
        <!-- DJ SERVICES - PRODUCT TEMPLATE              -->
        <!-- Creates 9 variants via attributes           -->
        <!-- Base price: $300/hr (Social Essential MIN)  -->
        <!-- ============================================ -->
        <record id="product_template_dj_services" model="product.template">
            <field name="name">DJ &amp; MC Services</field>
            <field name="default_code">DJ-SVC</field>
            <field name="categ_id" ref="product_category_event_entertainment"/>
            <field name="type">service</field>
            <field name="list_price">300.0</field>
            <field name="standard_price">150.0</field>
            <field name="uom_id" ref="uom.product_uom_hour"/>
            <field name="sale_ok" eval="True"/>
            <field name="purchase_ok" eval="True"/>
            <field name="description_sale">Professional DJ services for your event. Pricing is per hour. Package inclusions and rates vary by Event Type and Service Tier selected. Minimum hours may apply based on tier.</field>
        </record>

        <!-- Link Event Type Attribute to DJ Template -->
        <record id="dj_event_type_attribute_line" model="product.template.attribute.line">
            <field name="product_tmpl_id" ref="product_template_dj_services"/>
            <field name="attribute_id" ref="pa_event_type"/>
            <field name="value_ids" eval="[(6, 0, [
                ref('pav_event_social'),
                ref('pav_event_corporate'),
                ref('pav_event_wedding'),
            ])]"/>
        </record>

        <!-- Link Service Tier Attribute to DJ Template -->
        <record id="dj_service_tier_attribute_line" model="product.template.attribute.line">
            <field name="product_tmpl_id" ref="product_template_dj_services"/>
            <field name="attribute_id" ref="pa_service_tier"/>
            <field name="value_ids" eval="[(6, 0, [
                ref('pav_tier_essentials'),
                ref('pav_tier_classic'),
                ref('pav_tier_premier'),
            ])]"/>
        </record>

        <!-- ============================================ -->
        <!-- MC SERVICES - Separate Product (Add-on)     -->
        <!-- ============================================ -->
        <record id="product_template_mc_services" model="product.template">
            <field name="name">MC Services (Add-on)</field>
            <field name="default_code">MC-SVC</field>
            <field name="categ_id" ref="product_category_event_entertainment"/>
            <field name="type">service</field>
            <field name="list_price">75.0</field>
            <field name="standard_price">50.0</field>
            <field name="uom_id" ref="uom.product_uom_hour"/>
            <field name="sale_ok" eval="True"/>
            <field name="purchase_ok" eval="True"/>
            <field name="description_sale">Professional MC/Host services. Add-on to DJ Services or standalone.</field>
        </record>

