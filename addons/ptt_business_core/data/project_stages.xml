<?xml version='1.0' encoding='UTF-8'?>
<odoo noupdate="1">
    <!-- Event-Specific Project Stages for Party Time Texas -->
    
    <!-- Planning Stage - Event planning and coordination phase -->
    <record id="project_stage_planning" model="project.project.stage">
        <field name="name">Planning</field>
        <field name="sequence">10</field>
    </record>
    
    <!-- Setup Stage - Equipment delivery and setup phase -->
    <record id="project_stage_setup" model="project.project.stage">
        <field name="name">Setup</field>
        <field name="sequence">20</field>
    </record>
    
    <!-- Event Day Stage - Active event execution -->
    <record id="project_stage_event_day" model="project.project.stage">
        <field name="name">Event Day</field>
        <field name="sequence">30</field>
    </record>
    
    <!-- Teardown Stage - Equipment removal and cleanup -->
    <record id="project_stage_teardown" model="project.project.stage">
        <field name="name">Teardown</field>
        <field name="sequence">40</field>
    </record>
    
    <!-- Completed Stage - Event fully completed and closed -->
    <record id="project_stage_completed" model="project.project.stage">
        <field name="name">Completed</field>
        <field name="sequence">50</field>
        <field name="fold" eval="True"/>
    </record>
    
    <!-- Cancelled Stage - Event cancelled -->
    <record id="project_stage_cancelled" model="project.project.stage">
        <field name="name">Cancelled</field>
        <field name="sequence">60</field>
        <field name="fold" eval="True"/>
    </record>
    
</odoo>
