<?xml version='1.0' encoding='UTF-8'?>
<odoo noupdate="1">
    <!-- Project Stages for Party Time Texas -->
    <!-- Same as Task Stages for consistency -->
    
    <!-- To Do -->
    <record id="project_stage_todo" model="project.project.stage">
        <field name="name">To Do</field>
        <field name="sequence">10</field>
    </record>
    
    <!-- In Progress -->
    <record id="project_stage_in_progress" model="project.project.stage">
        <field name="name">In Progress</field>
        <field name="sequence">20</field>
    </record>
    
    <!-- Waiting - Folded -->
    <record id="project_stage_waiting" model="project.project.stage">
        <field name="name">Waiting</field>
        <field name="sequence">30</field>
        <field name="fold" eval="True"/>
    </record>
    
    <!-- Done -->
    <record id="project_stage_done" model="project.project.stage">
        <field name="name">Done</field>
        <field name="sequence">40</field>
    </record>
    
    <!-- Cancelled - Folded -->
    <record id="project_stage_cancelled" model="project.project.stage">
        <field name="name">Cancelled</field>
        <field name="sequence">50</field>
        <field name="fold" eval="True"/>
    </record>
    
</odoo>
