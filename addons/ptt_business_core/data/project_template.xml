<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- 
        Event Project Templates (3 Event Types)
        ========================================
        
        Reference:
        https://www.odoo.com/documentation/19.0/developer/reference/backend/data.html
        
        These templates are copied when Event Kickoff product triggers project creation.
        Each contains the same 9 main tasks with subtasks for event planning workflow.
        The template used depends on the Sale Order's event_type_id.
        
        Templates:
        - project_template_corporate: Corporate events
        - project_template_wedding: Wedding events
        - project_template_social: Social events
        
        NOTE: Odoo 19 native feature - when service_tracking='project_only' and
        project_template_id is set on a product, Odoo automatically copies this
        template when the Sales Order is confirmed.
        
        noupdate="0" ensures templates are created on module upgrade.
    -->
    <data noupdate="0">
        
