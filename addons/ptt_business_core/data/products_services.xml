        <!-- ============================================ -->
        <!-- EVENT KICKOFF - Internal $0 Product         -->
        <!-- Uses Odoo NATIVE project creation via       -->
        <!-- service_tracking + project_template_id      -->
        <!--                                             -->
        <!-- Ref: https://www.odoo.com/documentation/19.0/developer/reference/backend/orm.html -->
        <!-- ============================================ -->
        <record id="product_event_kickoff" model="product.product">
            <field name="name">Event Kickoff</field>
            <field name="default_code">KICKOFF</field>
            <field name="categ_id" ref="product_category_event_services"/>
            <field name="type">service</field>
            <field name="list_price">0.0</field>
            <field name="standard_price">0.0</field>
            <field name="sale_ok" eval="True"/>
            <field name="purchase_ok" eval="False"/>
            <field name="description_sale">Event project initialization. Creates project and standard tasks.</field>
            <!-- NATIVE ODOO: Auto-create project on SO confirm -->
            <field name="service_tracking">project_only</field>
            <field name="project_template_id" ref="project_template_standard_event"/>
        </record>
