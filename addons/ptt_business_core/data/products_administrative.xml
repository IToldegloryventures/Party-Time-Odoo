<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- 
        Administrative and Billing Products
        Fees, Deposits, Discounts, Insurance, etc.
    -->
    <data noupdate="0">
        <!-- ============================================ -->
        <!-- EVENT KICKOFF - Project Creation Product    -->
        <!-- ============================================ -->
        <!-- This is the MASTER product that creates the Event Project.
             It should be the first line on every event sale order.
             service_tracking='project_only' creates a new project.
             Price is $0 - it's just for project creation. -->
        <record id="product_template_event_kickoff" model="product.template">
            <field name="name">** Event Kickoff</field>
            <field name="default_code">EVENT-KICKOFF</field>
            <field name="categ_id" ref="product_category_event_services"/>
            <field name="type">service</field>
            <field name="list_price">0.0</field>
            <field name="uom_id" ref="uom.product_uom_unit"/>
            <field name="sale_ok" eval="True"/>
            <field name="purchase_ok" eval="False"/>
            <field name="service_tracking">project_only</field>
            <field name="project_template_id" ref="project_template_standard_event"/>
            <field name="description_sale">Event project kickoff - creates the event project when the sale order is confirmed. This should be the first line on every event quote.</field>
        </record>
        
        <!-- ============================================ -->
        <!-- ADDITIONAL INSURED COVERAGE EXTENSION       -->
        <!-- ============================================ -->
        <record id="product_template_additional_insured" model="product.template">
            <field name="name">* Additional Insured Coverage Extension</field>
            <field name="default_code">INS-EXT</field>
            <field name="categ_id" ref="product_category_event_services"/>
            <field name="type">service</field>
            <field name="list_price">0.0</field>
            <field name="uom_id" ref="uom.product_uom_unit"/>
            <field name="sale_ok" eval="True"/>
            <field name="purchase_ok" eval="False"/>
            <field name="description_sale">Additional insured coverage extension for event liability.</field>
        </record>

        <!-- ============================================ -->
        <!-- MISC EVENT ENTERTAINMENT SERVICES (Untaxed) -->
        <!-- ============================================ -->
        <record id="product_template_misc_entertainment_untaxed" model="product.template">
            <field name="name">* Misc Event Entertainment Services (Untaxed)</field>
            <field name="default_code">MISC-ENT-UT</field>
            <field name="categ_id" ref="product_category_event_entertainment"/>
            <field name="type">service</field>
            <field name="list_price">0.0</field>
            <field name="uom_id" ref="uom.product_uom_unit"/>
            <field name="sale_ok" eval="True"/>
            <field name="purchase_ok" eval="True"/>
            <field name="taxes_id" eval="[(5, 0, 0)]"/>
            <field name="description_sale">Miscellaneous event entertainment services (non-taxable).</field>
        </record>

        <!-- ============================================ -->
        <!-- MISC EVENT SERVICES (Taxed)                 -->
        <!-- ============================================ -->
        <record id="product_template_misc_services_taxed" model="product.template">
            <field name="name">* Misc Event Services (Taxed)</field>
            <field name="default_code">MISC-SVC</field>
            <field name="categ_id" ref="product_category_event_services"/>
            <field name="type">service</field>
            <field name="list_price">0.0</field>
            <field name="uom_id" ref="uom.product_uom_unit"/>
            <field name="sale_ok" eval="True"/>
            <field name="purchase_ok" eval="True"/>
            <field name="description_sale">Miscellaneous event services (taxable).</field>
        </record>
    </data>
</odoo>
