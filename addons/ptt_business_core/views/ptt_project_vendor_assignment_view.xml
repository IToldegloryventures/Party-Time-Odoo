<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!--
        PTT Project Vendor Assignment Views - BASIC VERSION
        
        NOTE: These are basic views for when ptt_vendor_management is NOT installed.
        If ptt_vendor_management IS installed, its views (with workflow buttons) take priority.
        
        IMPORTANT: View names must be UNIQUE to avoid conflicts:
        - This file: ptt.project.vendor.assignment.list.basic / .form.basic
        - ptt_vendor_management: ptt.project.vendor.assignment.tree / .form
        
        FIELD NAMING:
        - All custom fields use ptt_ prefix (Party Time Texas)
    -->
    <record id="view_ptt_project_vendor_assignment_list" model="ir.ui.view">
        <field name="name">ptt.project.vendor.assignment.list.basic</field>
        <field name="model">ptt.project.vendor.assignment</field>
        <field name="priority">50</field>
        <field name="arch" type="xml">
            <list>
                <field name="service_type"/>
                <field name="vendor_id"/>
                <field name="ptt_status" widget="badge" decoration-success="ptt_status == 'completed'" decoration-info="ptt_status == 'confirmed'" decoration-warning="ptt_status == 'pending'" decoration-danger="ptt_status == 'cancelled'"/>
                <field name="ptt_confirmed_date"/>
                <field name="actual_cost" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                <field name="notes"/>
            </list>
        </field>
    </record>

    <record id="view_ptt_project_vendor_assignment_form" model="ir.ui.view">
        <field name="name">ptt.project.vendor.assignment.form.basic</field>
        <field name="model">ptt.project.vendor.assignment</field>
        <field name="priority">50</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <field name="ptt_status" widget="statusbar" statusbar_visible="pending,confirmed,completed"/>
                </header>
                <sheet>
                    <group>
                        <field name="project_id" invisible="1"/>
                        <field name="service_type"/>
                        <field name="vendor_id"/>
                        <field name="actual_cost" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                    </group>
                    <group string="Vendor Contact">
                        <field name="ptt_contact_person"/>
                        <field name="ptt_contact_phone" widget="phone"/>
                        <field name="ptt_confirmed_date"/>
                    </group>
                    <group string="Event Details">
                        <field name="ptt_arrival_time"/>
                        <field name="ptt_equipment_notes" widget="text" nolabel="1" placeholder="Equipment, setup requirements, or special instructions..."/>
                    </group>
                    <group string="Notes">
                        <field name="notes" widget="text" nolabel="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
