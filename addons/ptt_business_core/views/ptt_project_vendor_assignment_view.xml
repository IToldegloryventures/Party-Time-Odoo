<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_ptt_project_vendor_assignment_list" model="ir.ui.view">
        <field name="name">ptt.project.vendor.assignment.list</field>
        <field name="model">ptt.project.vendor.assignment</field>
        <field name="arch" type="xml">
            <list>
                <field name="service_type"/>
                <field name="vendor_id"/>
                <field name="x_status" widget="badge" decoration-success="x_status == 'completed'" decoration-info="x_status == 'confirmed'" decoration-warning="x_status == 'pending'" decoration-danger="x_status == 'cancelled'"/>
                <field name="x_confirmed_date"/>
                <field name="actual_cost" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                <field name="notes"/>
            </list>
        </field>
    </record>

    <record id="view_ptt_project_vendor_assignment_form" model="ir.ui.view">
        <field name="name">ptt.project.vendor.assignment.form</field>
        <field name="model">ptt.project.vendor.assignment</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <field name="x_status" widget="statusbar" statusbar_visible="pending,confirmed,completed"/>
                </header>
                <sheet>
                    <group>
                        <field name="project_id" invisible="1"/>
                        <field name="service_type"/>
                        <field name="vendor_id"/>
                        <field name="actual_cost" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                    </group>
                    <group string="Vendor Contact">
                        <field name="x_contact_person"/>
                        <field name="x_contact_phone" widget="phone"/>
                        <field name="x_confirmed_date"/>
                    </group>
                    <group string="Event Details">
                        <field name="x_arrival_time"/>
                        <field name="x_equipment_notes" widget="text" nolabel="1" placeholder="Equipment, setup requirements, or special instructions..."/>
                    </group>
                    <group string="Notes">
                        <field name="notes" widget="text" nolabel="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
