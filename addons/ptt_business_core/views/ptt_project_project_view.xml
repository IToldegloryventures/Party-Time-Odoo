<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_project_form_ptt" model="ir.ui.view">
        <field name="name">project.project.form.ptt</field>
        <field name="model">project.project</field>
        <field name="inherit_id" ref="project.edit_project"/>
        <field name="arch" type="xml">
            <xpath expr="//sheet/notebook" position="inside">
                <page name="ptt_event_details" string="PTT Event Details">
                    <!-- Event Overview -->
                    <group string="Event Overview">
                        <group>
                            <field name="x_event_id"/>
                            <field name="x_event_name"/>
                            <field name="x_event_type"/>
                            <field name="x_event_date"/>
                        </group>
                        <group>
                            <field name="x_event_time"/>
                            <field name="x_guest_count"/>
                            <field name="x_venue_name"/>
                        </group>
                    </group>
                    <!-- Sales Team -->
                    <group string="Sales Team (for Commission Tracking)">
                        <group>
                            <field name="user_id" readonly="1"/>
                        </group>
                    </group>
                    <!-- Event Schedule -->
                    <group string="Event Schedule">
                        <group>
                            <field name="x_setup_start_time"/>
                            <field name="x_event_start_time"/>
                        </group>
                        <group>
                            <field name="x_event_end_time"/>
                            <field name="x_total_hours"/>
                            <field name="x_teardown_deadline"/>
                        </group>
                    </group>
                    <!-- Event Details -->
                    <group string="Event Details">
                        <group>
                            <field name="x_theme_dress_code"/>
                            <field name="x_special_requirements_desc"/>
                        </group>
                        <group>
                            <field name="x_inclement_weather_plan"/>
                            <field name="x_parking_restrictions_desc"/>
                        </group>
                    </group>
                </page>
            </xpath>
                <!-- Create Vendor Assignment tab -->
                <xpath expr="//page[@name='ptt_event_details']" position="after">
                    <page string="Vendor Assignment">
                        <!-- Estimated Values from CRM (Reference) -->
                        <group string="Estimated Values (from CRM - Reference Only)" col="4">
                            <field name="x_estimated_client_total" widget="monetary" 
                                   options="{'currency_field': 'currency_id'}" readonly="1"/>
                            <field name="x_estimated_total_vendor_costs" widget="monetary" 
                                   options="{'currency_field': 'currency_id'}" readonly="1"/>
                            <field name="x_estimated_margin" widget="monetary" 
                                   options="{'currency_field': 'currency_id'}" readonly="1"/>
                            <field name="x_estimated_margin_percent" widget="percentage" readonly="1"/>
                        </group>
                        <!-- Actual Values -->
                        <group string="Actual Pricing">
                            <group>
                                <field name="x_actual_client_total" widget="monetary" 
                                       options="{'currency_field': 'currency_id'}"/>
                                <field name="x_actual_total_vendor_costs" widget="monetary" 
                                       options="{'currency_field': 'currency_id'}" readonly="1"/>
                                <field name="x_actual_margin" widget="monetary" 
                                       options="{'currency_field': 'currency_id'}" readonly="1"/>
                                <field name="x_actual_margin_percent" widget="percentage" readonly="1"/>
                            </group>
                        </group>
                        <!-- Vendor Assignments -->
                        <group string="Vendor Assignments">
                            <field name="x_vendor_assignment_ids" nolabel="1">
                                <list>
                                    <field name="service_type"/>
                                    <field name="vendor_id"/>
                                    <field name="actual_cost" widget="monetary" 
                                           options="{'currency_field': 'currency_id'}"/>
                                    <field name="notes"/>
                                </list>
                                <form>
                                    <sheet>
                                        <group>
                                            <field name="service_type"/>
                                            <field name="vendor_id"/>
                                            <field name="actual_cost" widget="monetary" 
                                                   options="{'currency_field': 'currency_id'}"/>
                                            <field name="notes" widget="text"/>
                                        </group>
                                    </sheet>
                                </form>
                            </field>
                        </group>
                    </page>
                </xpath>
        </field>
    </record>
</odoo>
