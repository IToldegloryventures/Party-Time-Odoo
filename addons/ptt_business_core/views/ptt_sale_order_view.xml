<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!--
        PTT Sale Order Form View Extension
        
        Note: Quote approval handled via CRM Approval stage
        Note: Retainer/payment handled by Finance team
        
        Per Odoo 19 Sales docs: https://www.odoo.com/documentation/19.0/applications/sales/sales/sales_quotations.html
    -->
    
    <record id="view_sale_order_form_ptt" model="ir.ui.view">
        <field name="name">sale.order.form.ptt</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            
            <!-- Add PTT Contract Status section before order lines -->
            <xpath expr="//field[@name='order_line']" position="before">
                <group string="Contract Status" col="4">
                    <group>
                        <field name="x_contract_status" readonly="1" widget="badge" 
                               decoration-info="x_contract_status == 'sent'"
                               decoration-success="x_contract_status == 'signed'"
                               decoration-muted="x_contract_status == 'not_sent'"/>
                    </group>
                    <group>
                        <field name="x_contract_signed_date" readonly="1" invisible="x_contract_status != 'signed'"/>
                    </group>
                </group>
            </xpath>
            
            <!-- Hide Create Invoice button when invoices already exist -->
            <xpath expr="//button[@id='create_invoice']" position="attributes">
                <attribute name="invisible">invoice_status != 'to invoice' or invoice_count &gt; 0</attribute>
            </xpath>
            <xpath expr="//button[@id='create_invoice_percentage']" position="attributes">
                <attribute name="invisible">invoice_status != 'no' or state != 'sale' or invoice_count &gt; 0</attribute>
            </xpath>
            
            <!-- Navigation buttons to CRM and Project -->
            <xpath expr="//div[@name='button_box']" position="inside">
                <!-- Back to CRM Opportunity button -->
                <button name="action_view_opportunity" type="object"
                    class="oe_stat_button" icon="fa-bullhorn"
                    invisible="not opportunity_id">
                    <div class="o_stat_info">
                        <span class="o_stat_text">CRM Opportunity</span>
                    </div>
                </button>
            </xpath>
            
        </field>
    </record>
    
    <!-- Sale Order Line List and Form Views - Add Cost, Target Margin, and Target Margin Price fields -->
    <!-- This modifies the embedded order_line list and form views in the sale order form -->
    <record id="view_sale_order_form_line_ptt" model="ir.ui.view">
        <field name="name">sale.order.form.line.ptt</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <!-- Add Cost, Target Margin, and Target Margin Price fields in order line LIST view (after price_unit) -->
            <xpath expr="//field[@name='order_line']//list//field[@name='price_unit']" position="after">
                <!-- Cost field - show for all users (remove groups restriction so sales reps can see it) -->
                <field name="purchase_price" string="Cost" widget="monetary" 
                       options="{'currency_field': 'currency_id'}" 
                       optional="show"/>
                <field name="x_target_margin" widget="percentage" optional="show"/>
                <field name="x_target_margin_price" string="Target Price" widget="monetary"
                       options="{'currency_field': 'currency_id'}" 
                       optional="show"/>
            </xpath>
            <!-- Add Cost, Target Margin, and Target Margin Price fields in order line FORM view (after price_unit) -->
            <xpath expr="//field[@name='order_line']//form//field[@name='price_unit']" position="after">
                <!-- Cost field - show for all users -->
                <field name="purchase_price" string="Cost" widget="monetary"
                       options="{'currency_field': 'currency_id'}"/>
                <field name="x_target_margin" widget="percentage"/>
                <field name="x_target_margin_price" widget="monetary" 
                       options="{'currency_field': 'currency_id'}"/>
            </xpath>
        </field>
    </record>
    
</odoo>
