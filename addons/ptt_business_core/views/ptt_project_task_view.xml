<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!--
        PTT Project Task Form View Extension
        
        NOTE: Access event context via task.project_id:
        - task.project_id.x_event_date
        - task.project_id.x_venue_name
        - task.project_id.partner_id (client)
        - task.project_id.user_id (project manager)
        
        No redundant related fields needed on task.
    -->
    
    <record id="view_task_form_ptt" model="ir.ui.view">
        <field name="name">project.task.form.ptt</field>
        <field name="model">project.task</field>
        <field name="inherit_id" ref="project.view_task_form2"/>
        <field name="arch" type="xml">
            <!-- Add navigation button to project -->
            <xpath expr="//div[@name='button_box']" position="inside">
                <button name="action_view_project" type="object"
                    class="oe_stat_button" icon="fa-folder-open"
                    invisible="not project_id">
                    <div class="o_stat_info">
                        <span class="o_stat_text">Project</span>
                    </div>
                </button>
            </xpath>
        </field>
    </record>
</odoo>
