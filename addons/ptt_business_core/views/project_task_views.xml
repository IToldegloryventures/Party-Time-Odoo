<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Project Task Form Extension -->
        <record id="project_task_form_view_ptt" model="ir.ui.view">
            <field name="name">project.task.form.ptt</field>
            <field name="model">project.task</field>
            <field name="inherit_id" ref="project.view_task_form2"/>
            <field name="arch" type="xml">
                <!-- Add navigation button to project -->
                <xpath expr="//div[@name='button_box']" position="inside">
                    <button name="action_view_project" type="object"
                            class="oe_stat_button" icon="fa-folder-open"
                            invisible="not project_id">
                        <div class="o_stat_info">
                            <span class="o_stat_text">Project</span>
                        </div>
                    </button>
                </xpath>
                <xpath expr="//field[@name='project_id']" position="after">
                    <field name="ptt_event_id" readonly="1" invisible="not ptt_event_id"/>
                </xpath>
            </field>
        </record>

        <!-- Project Task Tree Extension -->
        <record id="project_task_tree_view_ptt" model="ir.ui.view">
            <field name="name">project.task.tree.ptt</field>
            <field name="model">project.task</field>
            <field name="inherit_id" ref="project.view_task_tree2"/>
            <field name="arch" type="xml">
                <field name="project_id" position="after">
                    <field name="ptt_event_id" optional="show"/>
                </field>
            </field>
        </record>

        <!-- Project Task Search Extension -->
        <record id="project_task_search_view_ptt" model="ir.ui.view">
            <field name="name">project.task.search.ptt</field>
            <field name="model">project.task</field>
            <field name="inherit_id" ref="project.view_task_search_form"/>
            <field name="arch" type="xml">
                <field name="project_id" position="after">
                    <field name="ptt_event_id"/>
                </field>
            </field>
        </record>

    </data>
</odoo>
