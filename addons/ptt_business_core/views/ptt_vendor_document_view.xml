<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_ptt_vendor_document_tree" model="ir.ui.view">
        <field name="name">ptt.vendor.document.tree</field>
        <field name="model">ptt.vendor.document</field>
        <field name="arch" type="xml">
            <tree string="Vendor Documents">
                <field name="document_type_id"/>
                <field name="validity"/>
                <field name="status" widget="badge"
                       decoration-success="status == 'valid'"
                       decoration-warning="status == 'expiring_soon'"
                       decoration-danger="status == 'expired'"/>
                <field name="upload_date"/>
            </tree>
        </field>
    </record>

    <record id="view_ptt_vendor_document_form" model="ir.ui.view">
        <field name="name">ptt.vendor.document.form</field>
        <field name="model">ptt.vendor.document</field>
        <field name="arch" type="xml">
            <form string="Vendor Document">
                <sheet>
                    <group>
                        <group>
                            <field name="vendor_id" options="{'no_create': True}"/>
                            <field name="document_type_id" options="{'no_create': True}"/>
                        </group>
                        <group>
                            <field name="status" widget="badge"/>
                            <field name="validity"/>
                            <field name="upload_date" readonly="1"/>
                            <field name="uploaded_by" readonly="1"/>
                        </group>
                    </group>
                    <group>
                        <field name="attached_document" filename="document_filename"/>
                        <field name="document_filename" invisible="1"/>
                    </group>
                    <group>
                        <field name="notes" widget="text"/>
                    </group>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <record id="action_ptt_vendor_document" model="ir.actions.act_window">
        <field name="name">Vendor Documents</field>
        <field name="res_model">ptt.vendor.document</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[]</field>
        <field name="context">{'default_vendor_id': active_id if active_model == 'res.partner' else False}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Upload your first vendor document!
            </p>
            <p>
                Track vendor documents (COI, W9, etc.) with expiry dates and automated alerts
            </p>
        </field>
    </record>
</odoo>
