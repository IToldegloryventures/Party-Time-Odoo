<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
        <!-- Partner Form Extension -->
        <record id="view_partner_form_ptt" model="ir.ui.view">
            <field name="name">res.partner.form.ptt</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='company_type']" position="after">
                    <span class="ms-4 d-flex align-items-center gap-1">
                        <field name="ptt_is_vendor" widget="boolean_toggle"
                               options="{'autosave': false}"
                               class="o_field_boolean"/>
                        <label for="ptt_is_vendor" string="Vendor"/>
                    </span>
                </xpath>

                <xpath expr="//div[@name='button_box']" position="inside">
                    <button name="action_view_ptt_opportunities" type="object"
                        class="oe_stat_button" icon="fa-bullseye"
                        invisible="customer_rank == 0">
                        <div class="o_stat_info">
                            <span class="o_stat_value"><field name="ptt_opportunity_count"/></span>
                            <span class="o_stat_text">Opportunities</span>
                        </div>
                    </button>
                </xpath>

                <xpath expr="//page[@name='sales_purchases']" position="inside">
                    <group string="Client Details" invisible="customer_rank == 0">
                        <field name="ptt_client_type"/>
                        <field name="ptt_preferred_contact"/>
                    </group>
                    <group string="Vendor Details" invisible="supplier_rank == 0">
                        <field name="ptt_vendor_service_ids" widget="many2many_tags"
                               options="{'no_create': True, 'no_create_edit': True}"
                               context="{'default_type': 'service', 'default_sale_ok': True}"/>
                        <field name="ptt_vendor_rating" widget="priority"/>
                        <field name="ptt_vendor_notes" nolabel="1"
                               placeholder="Internal notes about this vendor..."/>
                    </group>
                </xpath>
            </field>
        </record>

    </data>
</odoo>
