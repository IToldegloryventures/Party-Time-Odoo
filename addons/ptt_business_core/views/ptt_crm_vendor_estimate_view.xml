<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_ptt_crm_vendor_estimate_tree" model="ir.ui.view">
        <field name="name">ptt.crm.vendor.estimate.tree</field>
        <field name="model">ptt.crm.vendor.estimate</field>
        <field name="arch" type="xml">
            <tree>
                <field name="service_type"/>
                <field name="vendor_name"/>
                <field name="estimated_cost" widget="monetary" options="{'currency_field': 'currency_id'}"/>
            </tree>
        </field>
    </record>

    <record id="view_ptt_crm_vendor_estimate_form" model="ir.ui.view">
        <field name="name">ptt.crm.vendor.estimate.form</field>
        <field name="model">ptt.crm.vendor.estimate</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="crm_lead_id" invisible="1"/>
                        <field name="service_type"/>
                        <field name="vendor_name"/>
                        <field name="estimated_cost" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
