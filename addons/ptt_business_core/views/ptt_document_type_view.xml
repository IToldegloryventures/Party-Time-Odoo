<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!--
        PTT Document Type Views
        Purpose: Define document types vendors must provide (COI, W-9, etc.)
    -->

    <!-- Document Type Tree View -->
    <record id="view_ptt_document_type_tree" model="ir.ui.view">
        <field name="name">ptt.document.type.tree</field>
        <field name="model">ptt.document.type</field>
        <field name="arch" type="xml">
            <list>
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="code"/>
                <field name="required"/>
                <field name="has_expiry"/>
                <field name="expiry_warning_days" optional="show"/>
                <field name="active" optional="hide"/>
            </list>
        </field>
    </record>

    <!-- Document Type Form View -->
    <record id="view_ptt_document_type_form" model="ir.ui.view">
        <field name="name">ptt.document.type.form</field>
        <field name="model">ptt.document.type</field>
        <field name="arch" type="xml">
            <form string="Document Type">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                    </div>
                    <div class="oe_title">
                        <label for="name" string="Document Type"/>
                        <h1>
                            <field name="name" placeholder="e.g., Certificate of Insurance"/>
                        </h1>
                    </div>
                    <group>
                        <group string="Configuration">
                            <field name="code" placeholder="e.g., coi"/>
                            <field name="sequence"/>
                            <field name="required"/>
                        </group>
                        <group string="Expiry Settings">
                            <field name="has_expiry"/>
                            <field name="expiry_warning_days" invisible="not has_expiry"/>
                        </group>
                    </group>
                    <group string="Description">
                        <field name="description" nolabel="1" placeholder="Explain what this document is and why it's needed..."/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Document Type Search View -->
    <record id="view_ptt_document_type_search" model="ir.ui.view">
        <field name="name">ptt.document.type.search</field>
        <field name="model">ptt.document.type</field>
        <field name="arch" type="xml">
            <search string="Document Types">
                <field name="name"/>
                <field name="code"/>
                <filter name="filter_required" string="Required" domain="[('required', '=', True)]"/>
                <filter name="filter_has_expiry" string="Has Expiry" domain="[('has_expiry', '=', True)]"/>
                <separator/>
                <filter name="filter_archived" string="Archived" domain="[('active', '=', False)]"/>
                <group string="Group By">
                    <filter name="group_required" string="Required" context="{'group_by': 'required'}"/>
                    <filter name="group_has_expiry" string="Has Expiry" context="{'group_by': 'has_expiry'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Document Type Action -->
    <record id="action_ptt_document_type" model="ir.actions.act_window">
        <field name="name">Document Types</field>
        <field name="res_model">ptt.document.type</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first document type
            </p>
            <p>
                Document types define what documents vendors must provide (COI, W-9, etc.)
            </p>
        </field>
    </record>

</odoo>
