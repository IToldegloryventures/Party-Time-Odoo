<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!--
        PTT CRM Lead Form View Extension
        
        NOTE: Use standard Odoo fields:
        - user_id = Sales Rep
        - source_id = Lead Source (instead of custom inquiry_source)
        - expected_revenue = Budget (instead of custom budget_range)
        - name = Event/Opportunity Name (instead of custom event_name)
        - Activities = Follow-ups (instead of custom booleans)
        - Stages = Status tracking (instead of custom booleans)
        
        FIELD NAMING:
        - All custom fields use ptt_ prefix (Party Time Texas)
        - This follows Odoo best practice: x_ is reserved for Studio fields
    -->
    <record id="view_crm_lead_form_ptt" model="ir.ui.view">
        <field name="name">crm.lead.form.ptt</field>
        <field name="model">crm.lead</field>
        <field name="inherit_id" ref="crm.crm_lead_view_form"/>
        <field name="arch" type="xml">
            <!-- Add PTT Lead Intake tab (before Notes) -->
            <xpath expr="//sheet/notebook/page[@name='internal_notes']" position="before">
                <page name="lead_intake" string="Lead Intake">
                    <!-- Additional Contact Information -->
                    <group string="Additional Contact Information">
                        <group>
                            <field name="ptt_date_of_call"/>
                            <field name="ptt_preferred_contact_method"/>
                            <field name="ptt_referral_source"/>
                        </group>
                        <group string="2nd POC (Signing Authority)">
                            <field name="ptt_second_poc_name"/>
                            <field name="ptt_second_poc_phone"/>
                            <field name="ptt_second_poc_email"/>
                        </group>
                    </group>

                    <!-- Event ID -->
                    <group string="Event Identification">
                        <group>
                            <field name="ptt_event_id" placeholder="Enter Event ID (e.g., 000001)"/>
                        </group>
                    </group>

                    <!-- Event Overview -->
                    <group string="Event Overview">
                        <group>
                            <field name="ptt_event_type"/>
                            <field name="ptt_event_specific_goal"/>
                            <field name="ptt_event_date"/>
                            <field name="ptt_event_time"/>
                        </group>
                        <group>
                            <field name="ptt_estimated_guest_count"/>
                            <field name="ptt_total_hours"/>
                            <field name="ptt_event_location_type"/>
                            <field name="ptt_venue_booked"/>
                            <field name="ptt_venue_name"/>
                        </group>
                    </group>

                    <!-- CFO/Finance Contact (for corporate clients) -->
                    <group string="CFO/Finance Contact">
                        <group>
                            <field name="ptt_cfo_name"/>
                            <field name="ptt_cfo_phone"/>
                        </group>
                        <group>
                            <field name="ptt_cfo_email"/>
                            <field name="ptt_cfo_contact_method"/>
                        </group>
                    </group>
                </page>
            </xpath>
        </field>
    </record>

    <!-- Modify top section to two-column layout with source_id -->
    <record id="view_crm_lead_form_source_layout_ptt" model="ir.ui.view">
        <field name="name">crm.lead.form.source.layout.ptt</field>
        <field name="model">crm.lead</field>
        <field name="inherit_id" ref="crm.crm_lead_view_form"/>
        <field name="priority">50</field>
        <field name="arch" type="xml">
            <!-- Modify the lead_info group (for leads) to be two columns with source_id -->
            <xpath expr="//group[@name='lead_info']" position="replace">
                <group name="lead_info" invisible="type == 'opportunity'">
                    <group string="Contact Information">
                        <label for="contact_name"/>
                        <div class="o_row">
                            <field name="contact_name"/>
                        </div>
                        <field name="is_blacklisted" invisible="1"/>
                        <field name="phone_blacklisted" invisible="1"/>
                        <field name="email_state" invisible="1"/>
                        <field name="phone_state" invisible="1"/>
                        <field name="partner_email_update" invisible="1"/>
                        <field name="partner_phone_update" invisible="1"/>
                        <label for="email_from_group_lead_info" class="oe_inline"/>
                        <div class="o_row o_row_readonly">
                            <button name="mail_action_blacklist_remove" class="fa fa-ban text-danger"
                                title="This email is blacklisted for mass mailings. Click to unblacklist."
                                type="object" context="{'default_email': email_from}" groups="base.group_user"
                                invisible="not is_blacklisted"/>
                            <field name="email_from" id="email_from_group_lead_info" string="Email" widget="email"/>
                            <span class="fa fa-exclamation-triangle text-warning oe_edit_only"
                                title="By saving this change, the customer email will also be updated."
                                invisible="not partner_email_update"/>
                        </div>
                        <field name="email_cc" groups="base.group_no_one"/>
                        <field name="function"/>
                        <label for="phone_group_lead_info" class="oe_inline"/>
                        <div class="o_row o_row_readonly">
                            <button name="phone_action_blacklist_remove" class="fa fa-ban text-danger"
                                title="This phone number is blacklisted for SMS Marketing. Click to unblacklist."
                                type="object" context="{'default_phone': phone}" groups="base.group_user"
                                invisible="not phone_blacklisted"/>
                            <field name="phone" id="phone_group_lead_info" widget="phone"/>
                            <span class="fa fa-exclamation-triangle text-warning oe_edit_only"
                                title="By saving this change, the customer phone number will also be updated."
                                invisible="not partner_phone_update"/>
                        </div>
                    </group>
                    <group string="Lead Source">
                        <field name="source_id" placeholder="Select lead source"/>
                    </group>
                </group>
            </xpath>
            <!-- For opportunities, wrap the lead_partner group in a two-column layout with source_id -->
            <xpath expr="//group[@name='lead_partner']" position="after">
                <group string="Lead Source" invisible="type == 'lead'">
                    <field name="source_id" placeholder="Select lead source"/>
                </group>
            </xpath>
            <!-- Wrap both groups in a parent group to create two-column layout for opportunities -->
            <xpath expr="//group[@name='lead_partner']" position="wrap">
                <group/>
            </xpath>
        </field>
    </record>

    <!-- Vendor Tab - After Notes Tab -->
    <record id="view_crm_lead_form_vendor_tab_ptt" model="ir.ui.view">
        <field name="name">crm.lead.form.vendor.tab.ptt</field>
        <field name="model">crm.lead</field>
        <field name="inherit_id" ref="crm.crm_lead_view_form"/>
        <field name="priority">100</field>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='internal_notes']" position="after">
                <page name="vendor_tab" string="Vendor">
                    <!-- Section 1: Service Lines with Tier Selection -->
                    <group string="Service Selection (Tier Categories)">
                        <field name="ptt_service_line_ids" nolabel="1" colspan="2">
                            <list editable="bottom">
                                <field name="sequence" widget="handle"/>
                                <field name="service_type"/>
                                <field name="product_id" optional="show"/>
                                <field name="tier"/>
                                <field name="estimated_price"/>
                                <field name="description" optional="hide"/>
                            </list>
                        </field>
                    </group>

                    <!-- Section 2: Vendor Assignments -->
                    <group string="Vendor Assignments">
                        <field name="ptt_vendor_assignment_ids" nolabel="1" colspan="2">
                            <list editable="bottom">
                                <field name="service_type"/>
                                <field name="service_line_id" optional="show"/>
                                <field name="vendor_id"/>
                                <field name="estimated_cost"/>
                                <field name="vendor_contact_name" optional="hide"/>
                                <field name="vendor_contact_phone" optional="hide"/>
                                <field name="notes" optional="hide"/>
                            </list>
                        </field>
                    </group>
                </page>
            </xpath>
        </field>
    </record>

</odoo>
