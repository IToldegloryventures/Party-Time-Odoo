<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!--
        PTT CRM Lead Form View Extension
        
        NOTE: Use standard Odoo fields:
        - user_id = Sales Rep
        - source_id = Lead Source (instead of x_inquiry_source)
        - expected_revenue = Budget (instead of x_budget_range)
        - name = Event/Opportunity Name (instead of x_event_name)
        - Activities = Follow-ups (instead of x_followup_email_sent, x_proposal_sent, x_next_contact_date)
        - Stages = Status tracking (instead of custom booleans)
    -->
    <record id="view_crm_lead_form_ptt" model="ir.ui.view">
        <field name="name">crm.lead.form.ptt</field>
        <field name="model">crm.lead</field>
        <field name="inherit_id" ref="crm.crm_lead_view_form"/>
        <field name="arch" type="xml">
            <!-- Add PTT Lead Intake tab -->
            <xpath expr="//sheet/notebook/page[@name='internal_notes']" position="before">
                <page name="lead_intake" string="Lead Intake">
                    <!-- Additional Contact Information -->
                    <group string="Additional Contact Information">
                        <group>
                            <field name="x_date_of_call"/>
                            <field name="x_preferred_contact_method"/>
                            <field name="x_referral_source"/>
                        </group>
                        <group string="2nd POC (Signing Authority)">
                            <field name="x_second_poc_name"/>
                            <field name="x_second_poc_phone"/>
                            <field name="x_second_poc_email"/>
                        </group>
                    </group>

                    <!-- Event ID -->
                    <group string="Event Identification">
                        <group>
                            <field name="x_event_id" placeholder="Enter Event ID (e.g., 000001)"/>
                        </group>
                    </group>

                    <!-- Event Overview -->
                    <group string="Event Overview">
                        <group>
                            <field name="x_event_type"/>
                            <field name="x_event_specific_goal"/>
                            <field name="x_event_date"/>
                            <field name="x_event_time"/>
                        </group>
                        <group>
                            <field name="x_estimated_guest_count"/>
                            <field name="x_total_hours"/>
                            <field name="x_event_location_type"/>
                            <field name="x_venue_booked"/>
                            <field name="x_venue_name"/>
                        </group>
                    </group>

                    <!-- Services Requested -->
                    <group string="Services Requested">
                        <group>
                            <field name="x_service_dj"/>
                            <field name="x_service_photovideo"/>
                            <field name="x_service_live_entertainment"/>
                            <field name="x_service_lighting"/>
                            <field name="x_service_decor"/>
                        </group>
                        <group>
                            <field name="x_service_venue_sourcing"/>
                            <field name="x_service_catering"/>
                            <field name="x_service_transportation"/>
                            <field name="x_service_rentals"/>
                            <field name="x_service_photobooth"/>
                            <field name="x_service_caricature"/>
                            <field name="x_service_casino"/>
                            <field name="x_service_staffing"/>
                        </group>
                    </group>

                    <!-- CFO/Finance Contact (for corporate clients) -->
                    <group string="CFO/Finance Contact">
                        <group>
                            <field name="x_cfo_name"/>
                            <field name="x_cfo_phone"/>
                        </group>
                        <group>
                            <field name="x_cfo_email"/>
                            <field name="x_cfo_contact_method"/>
                        </group>
                    </group>
                </page>
            </xpath>
        </field>
    </record>
</odoo>
