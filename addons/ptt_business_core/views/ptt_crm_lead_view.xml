<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_crm_lead_form_ptt" model="ir.ui.view">
        <field name="name">crm.lead.form.ptt</field>
        <field name="model">crm.lead</field>
        <field name="inherit_id" ref="crm.crm_lead_view_form"/>
        <field name="arch" type="xml">
            <!-- Add invoice payment tracker and project buttons -->
            <xpath expr="//div[@name='button_box']" position="inside">
                <button name="action_view_invoices" type="object"
                    class="oe_stat_button" icon="fa-file-text-o"
                    invisible="x_invoice_count == 0 or type == 'lead'">
                    <div class="o_stat_info">
                        <span class="o_stat_text">Invoices</span>
                        <span class="o_stat_value"><field name="x_invoice_count" widget="integer"/></span>
                        <span class="o_stat_text">
                            Balance: <field name="x_invoice_remaining" widget="monetary" 
                                            options="{'currency_field': 'company_currency'}"/>
                        </span>
                    </div>
                </button>
                <button name="action_view_project" type="object"
                    class="oe_stat_button" icon="fa-tasks"
                    invisible="not x_project_id">
                    <div class="o_stat_info">
                        <span class="o_stat_text">Project</span>
                        <field name="x_project_id" class="o_stat_value" readonly="1"/>
                    </div>
                </button>
                <button name="action_view_project_tasks" type="object"
                    class="oe_stat_button" icon="fa-check-square-o"
                    invisible="not x_project_id">
                    <div class="o_stat_info">
                        <span class="o_stat_text">Project Tasks</span>
                        <span class="o_stat_value">
                            <field name="x_project_task_count" widget="integer"/>
                        </span>
                    </div>
                </button>
            </xpath>
            <!-- Add "Create Project" button in header (before Won button, after New Quotation) -->
            <xpath expr="//button[@name='action_set_won_rainbowman']" position="before">
                <button name="action_create_project_from_lead" string="Create Project" type="object"
                    class="oe_highlight" invisible="x_project_id or type == 'lead' or (not stage_id or stage_id.name != 'Booked')" 
                    help="Create a project from this opportunity and copy all event data"/>
            </xpath>
            <xpath expr="//sheet/notebook/page[@name='internal_notes']" position="before">
                <page name="lead_intake" string="Lead Intake">
                    <!-- Lead Contact Information - Using Standard Odoo Fields -->
                    <!-- Standard fields (user_id=Salesperson, contact_name, partner_name, phone, email_from) are on main form -->
                    <!-- Secondary SR is auto-populated from partner when partner is selected -->
                    <group string="PTT Additional Contact Information">
                        <group>
                            <field name="x_inquiry_source"/>
                            <field name="x_referral_source" invisible="x_inquiry_source != 'referral'"/>
                            <field name="x_date_of_call"/>
                            <field name="x_lead_type"/>
                            <field name="x_preferred_contact_method"/>
                        </group>
                        <group string="2nd POC (Signing Authority)">
                            <field name="x_second_poc_name"/>
                            <field name="x_second_poc_phone"/>
                            <field name="x_second_poc_email"/>
                        </group>
                    </group>

                    <!-- Event Overview -->
                    <group string="Event Overview">
                        <group>
                            <field name="x_event_type"/>
                            <field name="x_event_specific_goal"/>
                            <field name="x_event_name"/>
                            <field name="x_event_date"/>
                            <field name="x_event_time"/>
                        </group>
                        <group>
                            <field name="x_estimated_guest_count"/>
                            <field name="x_total_hours"/>
                            <field name="x_event_location_type"/>
                            <field name="x_venue_booked"/>
                            <field name="x_venue_name"/>
                        </group>
                    </group>

                    <!-- Services Requested -->
                    <group string="Services Requested">
                        <group>
                            <field name="x_service_dj"/>
                            <field name="x_service_photovideo"/>
                            <field name="x_service_live_entertainment"/>
                            <field name="x_service_lighting"/>
                            <field name="x_service_decor"/>
                        </group>
                        <group>
                            <field name="x_service_venue_sourcing"/>
                            <field name="x_service_catering"/>
                            <field name="x_service_transportation"/>
                            <field name="x_service_rentals"/>
                            <field name="x_service_photobooth"/>
                            <field name="x_service_caricature"/>
                            <field name="x_service_casino"/>
                            <field name="x_service_staffing"/>
                        </group>
                    </group>

                    <!-- Budget & Financial -->
                    <group string="Budget &amp; Financial Information">
                        <group>
                            <field name="x_budget_range"/>
                            <field name="x_services_already_booked"/>
                        </group>
                        <group>
                            <field name="x_cfo_name"/>
                            <field name="x_cfo_phone"/>
                            <field name="x_cfo_email"/>
                            <field name="x_cfo_contact_method"/>
                        </group>
                    </group>
                    <!-- Invoice Payment Tracking (Read-only display) -->
                    <group string="Invoice Payment Status" invisible="x_invoice_count == 0">
                        <group>
                            <field name="x_invoice_payment_status" widget="badge" 
                                   decoration-success="x_invoice_payment_status == 'paid'"
                                   decoration-warning="x_invoice_payment_status == 'partial'"
                                   decoration-danger="x_invoice_payment_status in ('overdue', 'not_paid')"/>
                            <field name="x_invoice_total" widget="monetary" 
                                   options="{'currency_field': 'company_currency'}" readonly="1"/>
                            <field name="x_invoice_paid" widget="monetary" 
                                   options="{'currency_field': 'company_currency'}" readonly="1"/>
                            <field name="x_invoice_remaining" widget="monetary" 
                                   options="{'currency_field': 'company_currency'}" readonly="1"/>
                        </group>
                    </group>

                    <!-- Follow-up Information -->
                    <group string="Follow-up Information">
                        <group>
                            <field name="x_followup_email_sent"/>
                            <field name="x_proposal_sent"/>
                            <field name="x_next_contact_date"/>
                        </group>
                        <!-- NOTE: Additional Notes uses standard 'description' field on Notes tab -->
                    </group>
                </page>
            </xpath>
            <!-- Create Service Details tab (after Lead Intake tab) -->
            <xpath expr="//page[@name='lead_intake']" position="after">
                <page name="service_details" string="Service Details">
                    <!-- DJ/MC Service Details (visible when x_service_dj = True) -->
                    <group string="DJ/MC Service Details" invisible="not x_service_dj">
                        <group>
                            <field name="x_dj_event_type"/>
                            <field name="x_dj_guest_age_range"/>
                            <field name="x_dj_guest_count"/>
                            <field name="x_dj_music_styles" widget="text"/>
                            <field name="x_dj_family_friendly"/>
                            <field name="x_dj_multi_part_event"/>
                            <field name="x_dj_multi_location"/>
                        </group>
                        <group>
                            <field name="x_dj_split_time"/>
                            <field name="x_dj_split_equipment"/>
                            <field name="x_dj_mc_needed"/>
                            <field name="x_dj_venue_setup"/>
                            <field name="x_dj_lighting_included"/>
                            <field name="x_dj_mic_required"/>
                        </group>
                    </group>
                    <group string="DJ/MC Karaoke Details" invisible="not x_service_dj or not x_dj_karaoke_desired">
                        <group>
                            <field name="x_dj_karaoke_desired" invisible="1"/>
                            <field name="x_dj_karaoke_duration"/>
                            <field name="x_dj_karaoke_separate_system"/>
                            <field name="x_dj_karaoke_song_list_options" widget="text"/>
                        </group>
                    </group>

                    <!-- Audio/Visual Service Details (visible when x_service_lighting = True) -->
                    <group string="Audio/Visual Service Details" invisible="not x_service_lighting">
                        <group>
                            <field name="x_av_event_type"/>
                            <field name="x_av_purpose"/>
                            <field name="x_av_media_format"/>
                            <field name="x_av_venue_size"/>
                            <field name="x_av_attendee_count"/>
                            <field name="x_av_projection_led_needed"/>
                            <field name="x_av_microphones_needed"/>
                            <field name="x_av_mic_count"/>
                        </group>
                        <group>
                            <field name="x_av_lighting_type"/>
                            <field name="x_av_content_type"/>
                            <field name="x_av_technical_support_needed"/>
                            <field name="x_av_support_type" widget="text"/>
                            <field name="x_av_livestream_needed"/>
                            <field name="x_av_location_type"/>
                            <field name="x_av_integrated_stage_band"/>
                        </group>
                    </group>

                    <!-- Face Painters/Airbrush Tattoos Details -->
                    <group string="Face Painters/Airbrush Tattoos Details" invisible="not x_service_decor">
                        <group>
                            <field name="x_facepaint_event_type"/>
                            <field name="x_facepaint_guest_age_range"/>
                            <field name="x_facepaint_total_attendees"/>
                            <field name="x_facepaint_location_type"/>
                            <field name="x_facepaint_style"/>
                            <field name="x_facepaint_artist_count"/>
                            <field name="x_facepaint_theme_based"/>
                            <field name="x_facepaint_duration"/>
                        </group>
                    </group>

                    <!-- Photo Booth Rentals Details -->
                    <group string="Photo Booth Rentals Details" invisible="not x_service_photobooth">
                        <group>
                            <field name="x_photobooth_type"/>
                            <field name="x_photobooth_event_type"/>
                            <field name="x_photobooth_theme"/>
                            <field name="x_photobooth_guest_count"/>
                            <field name="x_photobooth_location_type"/>
                            <field name="x_photobooth_delivery_method"/>
                            <field name="x_photobooth_runtime_duration"/>
                            <field name="x_photobooth_custom_branding"/>
                            <field name="x_photobooth_attendant_required"/>
                            <field name="x_photobooth_wifi_access"/>
                        </group>
                    </group>

                    <!-- Caricature Artists Details -->
                    <group string="Caricature Artists Details" invisible="not x_service_caricature">
                        <group>
                            <field name="x_caricature_event_type"/>
                            <field name="x_caricature_location"/>
                            <field name="x_caricature_drawing_type"/>
                            <field name="x_caricature_wifi_availability"/>
                            <field name="x_caricature_power_availability"/>
                            <field name="x_caricature_style_preference"/>
                            <field name="x_caricature_guest_count"/>
                            <field name="x_caricature_drawing_hours"/>
                            <field name="x_caricature_artist_count"/>
                            <field name="x_caricature_location_type"/>
                            <field name="x_caricature_custom_branding"/>
                        </group>
                    </group>

                    <!-- Casino-Themed Events Details -->
                    <group string="Casino-Themed Events Details" invisible="not x_service_casino">
                        <group>
                            <field name="x_casino_event_type"/>
                            <field name="x_casino_player_count"/>
                            <field name="x_casino_desired_games" widget="text"/>
                            <field name="x_casino_chip_redemption"/>
                            <field name="x_casino_funny_money_provider"/>
                            <field name="x_casino_duration"/>
                            <field name="x_casino_location_type"/>
                        </group>
                    </group>

                    <!-- Bands/Musicians Details (visible when x_service_live_entertainment = True) -->
                    <group string="Bands/Musicians Details" invisible="not x_service_live_entertainment">
                        <group>
                            <field name="x_band_type"/>
                            <field name="x_band_event_type"/>
                            <field name="x_band_guest_demographic"/>
                            <field name="x_band_music_style" widget="text"/>
                            <field name="x_band_location_type"/>
                            <field name="x_band_multi_part_event"/>
                            <field name="x_band_multi_location"/>
                            <field name="x_band_split_time"/>
                            <field name="x_band_split_equipment"/>
                        </group>
                        <group>
                            <field name="x_band_sets_hours"/>
                            <field name="x_band_performance_area_size"/>
                            <field name="x_band_stage_required"/>
                            <field name="x_band_stage_size" widget="text"/>
                            <field name="x_band_dressing_room_available"/>
                        </group>
                    </group>

                    <!-- Event Coordination Services Details -->
                    <group string="Event Coordination Services Details" invisible="not x_service_venue_sourcing">
                        <group>
                            <field name="x_coordination_event_type"/>
                            <field name="x_coordination_event_dates"/>
                            <field name="x_coordination_event_locations" widget="text"/>
                            <field name="x_coordination_service_level"/>
                            <field name="x_coordination_services_booked" widget="text"/>
                            <field name="x_coordination_venue_vendor_contracts"/>
                            <field name="x_coordination_contract_details" widget="text"/>
                            <field name="x_coordination_vendor_count"/>
                            <field name="x_coordination_responsibilities" widget="text"/>
                        </group>
                    </group>
                </page>
            </xpath>
            <!-- Create Event Pricing tab (after Service Details tab) -->
            <xpath expr="//page[@name='service_details']" position="after">
                <page name="event_pricing" string="Event Pricing">
                    <group string="Estimated Pricing (⚠️ REVIEW MARGIN BEFORE SENDING CONTRACT)">
                        <group>
                            <field name="x_estimated_client_total" widget="monetary" 
                                   options="{'currency_field': 'company_currency'}"/>
                            <field name="x_estimated_total_vendor_costs" widget="monetary" 
                                   options="{'currency_field': 'company_currency'}" readonly="1"/>
                            <field name="x_estimated_margin" widget="monetary" 
                                   options="{'currency_field': 'company_currency'}" readonly="1"/>
                            <field name="x_estimated_margin_percent" widget="percentage" readonly="1"/>
                        </group>
                        <group>
                            <label for="x_estimated_margin_percent" string="⚠️ Sales Reps: Check Estimated Margin % before creating Sale Order/Contract. Ensure margin is sufficient based on vendor cost estimates."/>
                        </group>
                    </group>
                    <!-- Actual Pricing (from confirmed Sale Orders/Contracts - most accurate) -->
                    <group string="Actual Pricing" invisible="not order_ids">
                        <group>
                            <field name="x_actual_client_total" widget="monetary" 
                                   options="{'currency_field': 'company_currency'}" readonly="1"/>
                            <field name="x_actual_total_vendor_costs" widget="monetary" 
                                   options="{'currency_field': 'company_currency'}" readonly="1"/>
                            <field name="x_actual_margin" widget="monetary" 
                                   options="{'currency_field': 'company_currency'}" readonly="1"/>
                            <field name="x_actual_margin_percent" widget="percentage" readonly="1"/>
                        </group>
                        <group>
                            <field name="order_ids" readonly="1" nolabel="1">
                                <list>
                                    <field name="name"/>
                                    <field name="amount_total" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                                </list>
                            </field>
                        </group>
                    </group>
                    <group string="Vendor Cost Estimates">
                        <field name="x_vendor_estimate_ids" nolabel="1">
                            <list>
                                <field name="service_type"/>
                                <field name="x_vendor_name"/>
                                <field name="estimated_cost" widget="monetary" 
                                       options="{'currency_field': 'currency_id'}"/>
                            </list>
                            <form>
                                <sheet>
                                    <group>
                                        <field name="service_type"/>
                                        <field name="x_vendor_name"/>
                                        <field name="estimated_cost" widget="monetary" 
                                               options="{'currency_field': 'currency_id'}"/>
                                    </group>
                                </sheet>
                            </form>
                        </field>
                    </group>
                </page>
            </xpath>
        </field>
    </record>
</odoo>
