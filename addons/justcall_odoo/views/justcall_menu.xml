              sequence="100"
              web_icon="justcall_odoo,static/description/icon.png"/>

    <!-- Configuration Menu -->
    <menuitem id="menu_justcall_config"
              name="Configuration"
              parent="menu_justcall_root"
              action="action_justcall_config"
              sequence="10"/>

    <!-- Call History Menu -->
