<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_partner_form_justcall" model="ir.ui.view">
        <field name="name">res.partner.form.justcall</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='button_box']" position="inside">
                <button name="action_view_justcall_calls" type="object" class="oe_stat_button" icon="fa-phone">
                    <field name="justcall_call_count" widget="statinfo" string="JustCall Calls"/>
                </button>
            </xpath>
            <xpath expr="//notebook" position="inside">
                <page string="JustCall Calls" name="justcall_calls">
                    <field name="justcall_call_ids" nolabel="1">
                        <tree>
                            <field name="call_date"/>
                            <field name="direction" widget="badge"/>
                            <field name="duration_formatted"/>
                            <field name="status" widget="badge"/>
                            <field name="user_id"/>
                            <field name="recording_url" widget="url"/>
                        </tree>
                    </field>
                </page>
            </xpath>
        </field>
    </record>
</odoo>
