<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="ptt_view_justcall_user_mapping_tree" model="ir.ui.view">
        <field name="name">ptt.justcall.user.mapping.tree</field>
        <field name="model">ptt.justcall.user.mapping</field>
        <field name="arch" type="xml">
            <tree string="User Mappings">
                <field name="justcall_name"/>
                <field name="justcall_email"/>
                <field name="odoo_user_id"/>
                <field name="active"/>
            </tree>
        </field>
    </record>

    <record id="ptt_view_justcall_user_mapping_form" model="ir.ui.view">
        <field name="name">ptt.justcall.user.mapping.form</field>
        <field name="model">ptt.justcall.user.mapping</field>
        <field name="arch" type="xml">
            <form string="User Mapping">
                <sheet>
                    <group>
                        <group>
                            <field name="justcall_name"/>
                            <field name="justcall_email"/>
                            <field name="justcall_user_id"/>
                        </group>
                        <group>
                            <field name="odoo_user_id" options="{'no_create': True}"/>
                            <field name="active"/>
                        </group>
                    </group>
                    <div class="alert alert-info" role="alert">
                        <p><strong>Note:</strong> If a JustCall user's email matches an Odoo user's email, 
                        they will be automatically mapped. Manual mapping is only needed when emails differ.</p>
                    </div>
                </sheet>
            </form>
        </field>
    </record>

    <record id="ptt_view_justcall_user_mapping_search" model="ir.ui.view">
        <field name="name">ptt.justcall.user.mapping.search</field>
        <field name="model">ptt.justcall.user.mapping</field>
        <field name="arch" type="xml">
            <search string="User Mappings">
                <field name="justcall_email"/>
                <field name="justcall_name"/>
                <field name="odoo_user_id"/>
                <filter string="Active" name="active" domain="[('active', '=', True)]"/>
            </search>
        </field>
    </record>

    <record id="ptt_action_justcall_user_mapping" model="ir.actions.act_window">
        <field name="name">PTT JustCall User Mappings</field>
        <field name="res_model">ptt.justcall.user.mapping</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No user mappings configured
            </p>
            <p>
                Map JustCall users to Odoo users when their email addresses don't match.
                If emails match, users are automatically mapped.
            </p>
        </field>
    </record>
</odoo>
